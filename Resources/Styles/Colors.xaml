<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <!-- Light Theme -->
    <Color x:Key="LightBackground">#FAFAFB</Color>
    <Color x:Key="LightSecondaryBackground">#FFFFFF</Color>
    <Color x:Key="DarkOnLightBackground">#1C1C1E</Color>

    <!-- Dark Theme -->
    <Color x:Key="DarkBackground">#121212</Color>
    <Color x:Key="DarkSecondaryBackground">#1E1E1E</Color>
    <Color x:Key="LightOnDarkBackground">#FFFFFF</Color>
    <Color x:Key="SecondaryDarkText">#B0B0B0</Color>

    <!-- Primary Colors -->
    <Color x:Key="Primary">#1D9BF0</Color>
    <Color x:Key="PrimaryDark">#0369A1</Color>
    <Color x:Key="Secondary">#22C55E</Color>
    <Color x:Key="Tertiary">#F59E0B</Color>

    <!-- Status Colors -->
    <Color x:Key="Success">#22C55E</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Danger">#EF4444</Color>
    <Color x:Key="Info">#64B5F6</Color>

    <!-- Neutral Grays -->
    <Color x:Key="Gray950">#0f172a</Color>
    <Color x:Key="Gray900">#1e293b</Color>
    <Color x:Key="Gray800">#334155</Color>
    <Color x:Key="Gray700">#475569</Color>
    <Color x:Key="Gray600">#64748b</Color>
    <Color x:Key="Gray500">#94a3b8</Color>
    <Color x:Key="Gray400">#cbd5e1</Color>
    <Color x:Key="Gray300">#e2e8f0</Color>
    <Color x:Key="Gray200">#f1f5f9</Color>
    <Color x:Key="Gray100">#f8fafc</Color>

    <!-- Semantic Colors -->
    <Color x:Key="MidnightBlue">#2B3E50</Color>
    <Color x:Key="Cyan">#17a2b8</Color>
    <Color x:Key="Magenta">#d946ef</Color>
    <Color x:Key="Muted">#94a3b8</Color>

    <!-- UI Elements -->
    <Color x:Key="Panel">#1E1E1E</Color>
    <Color x:Key="CardText">#FFFFFF</Color>
    <Color x:Key="BorderColor">#2C2C2C</Color>

</ResourceDictionary>