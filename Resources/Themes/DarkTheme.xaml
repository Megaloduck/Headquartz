<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Resources.Themes.DarkTheme">

    <!-- ==================== -->
    <!-- BACKGROUND COLORS    -->
    <!-- ==================== -->
    <Color x:Key="PageBackgroundColor">#0A0A0A</Color>    
    <Color x:Key="CardBackgroundColor">#161616</Color>    
    <Color x:Key="HeaderBackgroundColor">#121212</Color>    
    <Color x:Key="SidebarBackgroundColor">#141414</Color>    
    <Color x:Key="SurfaceColor">#1E1E1E</Color>


    <!-- ==================== -->
    <!-- TEXT COLORS          -->
    <!-- ==================== -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#CCCCCC</Color>
    <Color x:Key="TertiaryTextColor">#999999</Color>
    <Color x:Key="DisabledTextColor">#666666</Color>

    <!-- ==================== -->
    <!-- ACCENT & SEMANTIC    -->
    <!-- ==================== -->
    <Color x:Key="PrimaryColor">#7C9EFF</Color>    <!-- Accent Colors -->
    <Color x:Key="PrimaryVariantColor">#4A7DFF</Color>
    <Color x:Key="SecondaryColor">#4CD964</Color>
    <Color x:Key="AccentColor">#FFB74D</Color>

    <Color x:Key="SuccessColor">#34C759</Color>    <!-- Semantic Colors -->
    <Color x:Key="WarningColor">#FF9500</Color>    
    <Color x:Key="DangerColor">#FF3B30</Color>   
    <Color x:Key="InfoColor">#5AC8FA</Color>    

    <!-- ==================== -->
    <!-- BORDER & DIVIDER     -->
    <!-- ==================== -->

    <Color x:Key="BorderColor">#2A2A2A</Color>    
    <Color x:Key="DividerColor">#333333</Color>    
    <Color x:Key="LightBorderColor">#3A3A3A</Color>    

    <!-- ==================== -->
    <!-- INTERACTIVE ELEMENTS -->
    <!-- ==================== -->
    <Color x:Key="PrimaryButtonBackground">#7C9EFF</Color>    
    <Color x:Key="PrimaryButtonTextColor">#000000</Color>    
    <Color x:Key="SecondaryButtonBackground">#2A2A2A</Color>  
    <Color x:Key="SecondaryButtonTextColor">#FFFFFF</Color>    
    <Color x:Key="TextButtonColor">#7C9EFF</Color>   

    <!-- Hover States -->
    <Color x:Key="HoverOverlayColor">#1AFFFFFF</Color>    
    <Color x:Key="PressedOverlayColor">#33FFFFFF</Color>       

    <!-- ==================== -->
    <!-- SPECIAL COMPONENTS   -->
    <!-- ==================== -->
    <Color x:Key="BadgeBackgroundColor">#1E2B3D</Color>   
    <Color x:Key="BadgeTextColor">#7C9EFF</Color>    

    <!-- Input Fields -->
    <Color x:Key="InputBackgroundColor">#1A1A1A</Color>
    <Color x:Key="InputBorderColor">#333333</Color>
    <Color x:Key="InputPlaceholderColor">#777777</Color>

    <!-- Selection & Focus -->
    <Color x:Key="SelectionColor">#2A7C9EFF</Color>    
    <Color x:Key="FocusBorderColor">#7C9EFF</Color>

    <!-- ==================== -->
    <!-- SHADOWS & ELEVATION  -->
    <!-- ==================== -->
    <!-- Minimal shadows for depth -->
    <Color x:Key="ShadowColor">#40000000</Color>
    <!-- Reduced opacity for minimalism -->
    <Color x:Key="ElevationShadowColor">#60000000</Color>
    <!-- For floating elements -->

    <!-- ==================== -->
    <!-- STATUS & INDICATORS  -->
    <!-- ==================== -->
    <Color x:Key="ActiveColor">#34C759</Color>
    <Color x:Key="InactiveColor">#FF9500</Color>
    <Color x:Key="OfflineColor">#FF3B30</Color>
</ResourceDictionary>