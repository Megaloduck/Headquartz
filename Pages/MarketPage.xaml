<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.MarketPage"
            Title="Market">

    <VerticalStackLayout Padding="20" Spacing="16">

        <Label Text="Market Overview"
               FontSize="28"
               FontAttributes="Bold" />

        <Frame Padding="16" BorderColor="#444">
            <VerticalStackLayout>

                <Label Text="Current Demand" FontSize="18" />
                <Label Text="{Binding Demand}" FontSize="24" />

                <Label Text="Market Price" FontSize="18" Margin="0,10,0,0" />
                <Label Text="{Binding Price}" FontSize="24" />

                <Label Text="Market Trend" FontSize="18" Margin="0,10,0,0" />
                <Label Text="{Binding TrendDescription}" FontSize="18" />

            </VerticalStackLayout>
        </Frame>

        <Button Text="Refresh Forecast"
                Command="{Binding RefreshForecastCommand}" />

        <Label Text="{Binding Forecast}"
               FontSize="16"
               TextColor="Gray"/>

    </VerticalStackLayout>
</ContentPage>