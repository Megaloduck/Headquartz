<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.Finance.ExpensesPage"
             Title="ExpensesPage">
    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Expenses Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="20,15">
            <VerticalStackLayout Spacing="15">
                <HorizontalStackLayout>
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Expense Management" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        <Label Text="Track, approve, and manage company expenses" 
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                    </VerticalStackLayout>

                    <Border Background="{DynamicResource DangerColor}"
                            Padding="15,10"
                            StrokeShape="RoundRectangle 10"
                            Margin="20,0,0,0">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="ðŸ’¸" FontSize="18"/>
                            <Label Text="{Binding TotalExpenses, StringFormat='${0:N0}K'}" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </HorizontalStackLayout>
                    </Border>
                </HorizontalStackLayout>

                <!-- Expense Tabs -->
                <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Start" AlignItems="Center">
                    <Button Text="ðŸ“‹ All Expenses ({Binding AllExpensesCount})" 
                            BackgroundColor="{Binding IsAllTabActive, Converter={StaticResource TabActiveConverter}}"
                            TextColor="{Binding IsAllTabActive, Converter={StaticResource TabTextColorConverter}}"
                            CornerRadius="20"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            Command="{Binding SwitchToAllCommand}"/>

                    <Button Text="â³ Pending ({Binding PendingCount})" 
                            BackgroundColor="{Binding IsPendingTabActive, Converter={StaticResource TabActiveConverter}}"
                            TextColor="{Binding IsPendingTabActive, Converter={StaticResource TabTextColorConverter}}"
                            CornerRadius="20"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            Command="{Binding SwitchToPendingCommand}"/>

                    <Button Text="âœ… Approved ({Binding ApprovedCount})" 
                            BackgroundColor="{Binding IsApprovedTabActive, Converter={StaticResource TabActiveConverter}}"
                            TextColor="{Binding IsApprovedTabActive, Converter={StaticResource TabTextColorConverter}}"
                            CornerRadius="20"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            Command="{Binding SwitchToApprovedCommand}"/>

                    <Button Text="âŒ Rejected ({Binding RejectedCount})" 
                            BackgroundColor="{Binding IsRejectedTabActive, Converter={StaticResource TabActiveConverter}}"
                            TextColor="{Binding IsRejectedTabActive, Converter={StaticResource TabTextColorConverter}}"
                            CornerRadius="20"
                            Padding="20,10"
                            Command="{Binding SwitchToRejectedCommand}"/>
                </FlexLayout>
            </VerticalStackLayout>
        </Border>

        <!-- Expenses Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Quick Stats -->
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                    <!-- This Month -->
                    <Border Grid.Column="0" Style="{StaticResource DashboardCardStyle}">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding MonthlyExpenses, StringFormat='${0:N0}'}" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource DangerColor}"/>
                            <Label Text="This Month" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Avg per Employee -->
                    <Border Grid.Column="1" Style="{StaticResource DashboardCardStyle}">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding AvgPerEmployee, StringFormat='${0:N0}'}" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource WarningColor}"/>
                            <Label Text="Avg per Employee" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Pending Approval -->
                    <Border Grid.Column="2" Style="{StaticResource DashboardCardStyle}">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding PendingAmount, StringFormat='${0:N0}'}" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource AccentColor}"/>
                            <Label Text="Pending Approval" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Top Category -->
                    <Border Grid.Column="3" Style="{StaticResource DashboardCardStyle}">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding TopCategory}" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding TopCategoryAmount, StringFormat='${0:N0}'}" 
                                   FontSize="14"
                                   TextColor="{DynamicResource PrimaryColor}"/>
                            <Label Text="Top Category" 
                                   FontSize="11"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Add Expense Button -->
                <Border Background="{DynamicResource PrimaryColor}"
                        Padding="20,15"
                        StrokeShape="RoundRectangle 10">
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <Label Text="âž• Submit New Expense" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryColor}"/>
                            <Label Text="Add travel, supplies, or other business expenses" 
                                   FontSize="13"
                                   TextColor="{DynamicResource SecondaryTextColor}"/>
                        </VerticalStackLayout>

                        <Button Grid.Column="1" 
                                Text="Add Expense"
                                BackgroundColor="{DynamicResource PrimaryColor}"
                                TextColor="White"
                                Padding="20,10"
                                CornerRadius="8"
                                Command="{Binding AddExpenseCommand}"/>
                    </Grid>
                </Border>

                <!-- Expense List -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <HorizontalStackLayout>
                            <Label Text="Expense Records" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding ShowingCount, StringFormat='Showing {0}'}" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"
                                   Margin="10,0,0,0"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>

                        <!-- Expense Table Header -->
                        <Grid ColumnDefinitions="120,*,100,100,100,80,80" 
                              Padding="10"
                              BackgroundColor="{DynamicResource HeaderBackgroundColor}">
                            <Label Grid.Column="0" Text="Date" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Grid.Column="1" Text="Description" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Grid.Column="2" Text="Category" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Grid.Column="3" Text="Employee" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Grid.Column="4" Text="Amount" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Grid.Column="5" Text="Status" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Grid.Column="6" Text="Actions" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                        </Grid>

                        <!-- Expense Items -->
                        <CollectionView ItemsSource="{Binding Expenses}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="15,10" 
                                            Margin="0,0,0,1"
                                            Background="{DynamicResource CardBackgroundColor}">

                                        <Grid ColumnDefinitions="120,*,100,100,100,80,80" ColumnSpacing="10">

                                            <!-- Date -->
                                            <Label Grid.Column="0" 
                                                   Text="{Binding Date, StringFormat='{0:MMM dd}'}"
                                                   FontSize="13"
                                                   TextColor="{DynamicResource SecondaryTextColor}"
                                                   VerticalOptions="Center"/>

                                            <!-- Description -->
                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="{Binding Description}" 
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                                <Label Text="{Binding Notes}" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <!-- Category -->
                                            <Border Grid.Column="2" 
                                                    Background="{Binding CategoryColor}"
                                                    Padding="8,4"
                                                    StrokeShape="RoundRectangle 5">
                                                <Label Text="{Binding Category}" 
                                                       FontSize="11"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       HorizontalOptions="Center"/>
                                            </Border>

                                            <!-- Employee -->
                                            <HorizontalStackLayout Grid.Column="3" Spacing="5">
                                                <Border Background="{DynamicResource PrimaryColor}"
                                                        WidthRequest="28"
                                                        HeightRequest="28"
                                                        StrokeShape="RoundRectangle 14">
                                                    <Label Text="{Binding EmployeeInitials}" 
                                                           FontSize="11"
                                                           FontAttributes="Bold"
                                                           TextColor="White"
                                                           HorizontalOptions="Center"
                                                           VerticalOptions="Center"/>
                                                </Border>
                                                <Label Text="{Binding EmployeeName}" 
                                                       FontSize="12"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       VerticalOptions="Center"/>
                                            </HorizontalStackLayout>

                                            <!-- Amount -->
                                            <Label Grid.Column="4" 
                                                   Text="{Binding Amount, StringFormat='${0:N2}'}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource DangerColor}"
                                                   VerticalOptions="Center"/>

                                            <!-- Status -->
                                            <Border Grid.Column="5" 
                                                    Background="{Binding StatusColor}"
                                                    Padding="8,4"
                                                    StrokeShape="RoundRectangle 5">
                                                <Label Text="{Binding Status}" 
                                                       FontSize="11"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       HorizontalOptions="Center"/>
                                            </Border>

                                            <!-- Actions -->
                                            <HorizontalStackLayout Grid.Column="6" Spacing="5">
                                                <Button Text="ðŸ‘ï¸"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{DynamicResource PrimaryColor}"
                                                        Padding="0"
                                                        WidthRequest="30"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewExpenseCommand}"
                                                        CommandParameter="{Binding Id}"/>

                                                <Button Text="âœ“"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{DynamicResource SuccessColor}"
                                                        Padding="0"
                                                        WidthRequest="30"
                                                        IsVisible="{Binding CanApprove}"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ApproveExpenseCommand}"
                                                        CommandParameter="{Binding Id}"/>
                                            </HorizontalStackLayout>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!-- Expense Categories -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Expense by Category" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>

                        <Grid ColumnDefinitions="2*,*" ColumnSpacing="20">
                            <!-- Category Chart -->
                            <Border Grid.Column="0" 
                                    Background="#1AFFFFFF"
                                    HeightRequest="200"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="ðŸ“Š Category Distribution" 
                                       FontSize="16"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Category List -->
                            <VerticalStackLayout Grid.Column="1" Spacing="10">
                                <VerticalStackLayout BindableLayout.ItemsSource="{Binding ExpenseCategories}" Spacing="8">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <HorizontalStackLayout Grid.Column="0" Spacing="8">
                                                    <BoxView WidthRequest="12"
                                                             HeightRequest="12"
                                                             Color="{Binding Color}"
                                                             CornerRadius="2"
                                                             VerticalOptions="Center"/>
                                                    <Label Text="{Binding Name}" 
                                                           FontSize="13"
                                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                                </HorizontalStackLayout>
                                                <Label Grid.Column="1" 
                                                       Text="{Binding Amount, StringFormat='${0:N0}'}"
                                                       FontSize="13"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource DangerColor}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Expense Actions -->
        <Border Grid.Row="2" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="15">
            <Grid ColumnDefinitions="*,Auto">
                <HorizontalStackLayout Grid.Column="0" Spacing="15">
                    <Button Text="ðŸ“Š Monthly Report" 
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            TextColor="{DynamicResource PrimaryTextColor}"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding MonthlyReportCommand}"/>

                    <Button Text="ðŸ”„ Batch Approve" 
                            BackgroundColor="{DynamicResource SuccessColor}"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding BatchApproveCommand}"
                            IsEnabled="{Binding HasPendingApprovals}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <Button Text="âš™ï¸ Expense Policy" 
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            TextColor="{DynamicResource PrimaryTextColor}"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding ExpensePolicyCommand}"/>

                    <Button Text="ðŸ“¥ Export Data" 
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding ExportDataCommand}"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

    </Grid>

</ContentPage>