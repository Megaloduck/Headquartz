<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.Finance.FinanceDashboardPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             Title="Finance Dashboard">
    
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="12">

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12">
                    <Frame Grid.Column="0" CornerRadius="8" Padding="12">
                        <VerticalStackLayout>
                            <Label Text="Cash" FontAttributes="Bold" />
                            <Label Text="{Binding CashBalance, StringFormat='${0:N2}'}" FontSize="22"/>
                            <Label Text="Cash flow" FontSize="12" />
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="1" CornerRadius="8" Padding="12">
                        <VerticalStackLayout>
                            <Label Text="Debt" FontAttributes="Bold" />
                            <Label Text="{Binding TotalDebt, StringFormat='${0:N2}'}" FontSize="22"/>
                            <Button Text="Manage Loans" Command="{Binding ManageLoansCommand}" />
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="0" Grid.Row="1" CornerRadius="8" Padding="12">
                        <VerticalStackLayout>
                            <Label Text="Monthly Expenses" FontAttributes="Bold" />
                            <CollectionView ItemsSource="{Binding RecentExpenses}" HeightRequest="140">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout Orientation="Horizontal" Spacing="8">
                                            <Label Text="{Binding Category}" WidthRequest="130"/>
                                            <Label Text="{Binding Amount, StringFormat='${0:N2}'}" HorizontalOptions="EndAndExpand"/>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="1" Grid.Row="1" CornerRadius="8" Padding="12">
                        <VerticalStackLayout>
                            <Label Text="Revenue" FontAttributes="Bold"/>
                            <Label Text="{Binding Revenue, StringFormat='${0:N2}'}" FontSize="20"/>
                            <Button Text="Generate Report" Command="{Binding GenerateReportCommand}" />
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>
