<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.Finance.FinanceDashboardPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             Title="Finance Dashboard">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Finance Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="20,15">
            <VerticalStackLayout Spacing="15">
                <HorizontalStackLayout>
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Financial Control Center" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        <Label Text="Financial KPIs, cash flow overview, and budget tracking" 
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                    </VerticalStackLayout>

                    <Border Background="{DynamicResource SuccessColor}"
                            Padding="15,10"
                            StrokeShape="RoundRectangle 10"
                            Margin="20,0,0,0">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="ðŸ’°" FontSize="18"/>
                            <Label Text="{Binding CompanyCash, StringFormat='${0:N0}K'}" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </HorizontalStackLayout>
                    </Border>
                </HorizontalStackLayout>

                <!-- Financial Quick Stats -->
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                    <!-- Revenue -->
                    <Border Grid.Column="0" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                            <Label Text="Revenue" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Text="{Binding Revenue, StringFormat='${0:N0}'}" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource SuccessColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Expenses -->
                    <Border Grid.Column="1" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                            <Label Text="Expenses" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Text="{Binding Expenses, StringFormat='${0:N0}'}" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource DangerColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Profit -->
                    <Border Grid.Column="2" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                            <Label Text="Net Profit" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Text="{Binding NetProfit, StringFormat='${0:N0}'}" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="{Binding ProfitColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Cash Flow -->
                    <Border Grid.Column="3" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                            <Label Text="Cash Flow" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Text="{Binding CashFlow, StringFormat='${0:N0}'}" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="{Binding CashFlowColor}"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>
        </Border>

        <!-- Finance Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Budget vs Actual -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Budget vs Actual" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>

                        <Grid ColumnDefinitions="2*,*" ColumnSpacing="20">
                            <!-- Chart Placeholder -->
                            <Border Grid.Column="0" 
                                    Background="#1AFFFFFF"
                                    HeightRequest="200"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="ðŸ“Š Budget Performance Chart" 
                                       FontSize="16"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Department Budgets -->
                            <VerticalStackLayout Grid.Column="1" Spacing="10">
                                <Label Text="Department Spending" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource SecondaryTextColor}"/>

                                <VerticalStackLayout BindableLayout.ItemsSource="{Binding DepartmentBudgets}" Spacing="8">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label Grid.Column="0" 
                                                       Text="{Binding Department}"
                                                       FontSize="13"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                                <Label Grid.Column="1" 
                                                       Text="{Binding Utilization, StringFormat='{0:P0}'}"
                                                       FontSize="13"
                                                       FontAttributes="Bold"
                                                       TextColor="{Binding UtilizationColor}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Recent Transactions -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <HorizontalStackLayout>
                            <Label Text="Recent Transactions" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding RecentTransactions.Count}" 
                                   BackgroundColor="{DynamicResource PrimaryColor}"
                                   TextColor="White"
                                   Padding="8,4"
                                   Margin="10,0,0,0"/>  

                        </HorizontalStackLayout>

                        <CollectionView ItemsSource="{Binding RecentTransactions}" HeightRequest="200">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12" 
                                            Margin="0,0,0,5"
                                            Background="{DynamicResource HeaderBackgroundColor}"
                                            StrokeShape="RoundRectangle 8">
                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                                            <Border Grid.Column="0" 
                                                    Background="{Binding TypeColor}"
                                                    WidthRequest="40"
                                                    HeightRequest="40"
                                                    StrokeShape="RoundRectangle 8">
                                                <Label Text="{Binding Icon}" 
                                                       FontSize="18"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Border>

                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="{Binding Description}" 
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                                <Label Text="{Binding Category}" 
                                                       FontSize="12"
                                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="2" Spacing="2" HorizontalOptions="End">
                                                <Label Text="{Binding Amount, StringFormat='${0:N0}'}" 
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{Binding AmountColor}"/>
                                                <Label Text="{Binding Date, StringFormat='{0:MMM dd}'}" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!-- Financial Alerts -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="âš ï¸ Financial Alerts" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource WarningColor}"/>

                        <CollectionView ItemsSource="{Binding Alerts}" HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12" 
                                            Margin="0,0,0,5"
                                            Background="{Binding SeverityColor, Converter={StaticResource AlertColorConverter}}"
                                            StrokeShape="RoundRectangle 8">
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding Icon}" FontSize="16"/>
                                            <VerticalStackLayout Spacing="2">
                                                <Label Text="{Binding Title}" 
                                                       FontSize="14" 
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                                <Label Text="{Binding Message}" 
                                                       FontSize="12"
                                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                                                <Label Text="{Binding Department}" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                            </VerticalStackLayout>
                                        </HorizontalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!-- Quick Actions -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                    <Button Grid.Column="0" 
                            Text="ðŸ“‹ Process Payroll"
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="50"
                            Command="{Binding ProcessPayrollCommand}"/>

                    <Button Grid.Column="1" 
                            Text="ðŸ“Š Financial Reports"
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            TextColor="{DynamicResource PrimaryTextColor}"
                            CornerRadius="8"
                            HeightRequest="50"
                            Command="{Binding ViewReportsCommand}"/>

                    <Button Grid.Column="2" 
                            Text="âš™ï¸ Budget Settings"
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            TextColor="{DynamicResource PrimaryTextColor}"
                            CornerRadius="8"
                            HeightRequest="50"
                            Command="{Binding BudgetSettingsCommand}"/>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
