<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.Production.ProductionReportsPage"
             Title="ProductionReportsPage">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="{DynamicResource HeaderBackgroundColor}"
               Padding="20"
               CornerRadius="0">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="Production Reports" 
                           FontSize="24" 
                           TextColor="{DynamicResource PrimaryTextColor}"
                           FontAttributes="Bold"/>
                    <Label Text="Production efficiency, yield rates, downtime analysis, cost per unit"
                           TextColor="{DynamicResource SecondaryTextColor}"/>
                </VerticalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <Button Text="Generate Report"
                            Command="{Binding GenerateReportCommand}"
                            BackgroundColor="{DynamicResource PrimaryButtonBackground}"
                            TextColor="{DynamicResource PrimaryButtonTextColor}"
                            Padding="15,10"/>
                    <Button Text="Export All"
                            Command="{Binding ExportAllReportsCommand}"
                            BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                            TextColor="{DynamicResource SecondaryButtonTextColor}"
                            Padding="15,10"/>
                </HorizontalStackLayout>
            </Grid>
        </Frame>

        <!-- Main Content -->
        <Grid Grid.Row="1" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Report Types -->
            <Frame Grid.Column="0"
                   BackgroundColor="{DynamicResource SidebarBackgroundColor}"
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="20">
                    <!-- Report Categories -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Report Types"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="16"
                               FontAttributes="Bold"/>

                        <Button Text="Efficiency Reports"
                                Command="{Binding SelectEfficiencyReportsCommand}"
                                BackgroundColor="{Binding EfficiencyReportsButtonColor}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Yield Reports"
                                Command="{Binding SelectYieldReportsCommand}"
                                BackgroundColor="{Binding YieldReportsButtonColor}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Downtime Analysis"
                                Command="{Binding SelectDowntimeReportsCommand}"
                                BackgroundColor="{Binding DowntimeReportsButtonColor}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Cost Analysis"
                                Command="{Binding SelectCostReportsCommand}"
                                BackgroundColor="{Binding CostReportsButtonColor}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Quality Reports"
                                Command="{Binding SelectQualityReportsCommand}"
                                BackgroundColor="{Binding QualityReportsButtonColor}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                    </VerticalStackLayout>

                    <!-- Date Range -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Date Range"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"/>

                        <Picker Title="Select Range"
                                ItemsSource="{Binding DateRanges}"
                                SelectedItem="{Binding SelectedDateRange}"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                <Label Text="From"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       FontSize="11"/>
                                <DatePicker Date="{Binding StartDate}"
                                            TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="To"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       FontSize="11"/>
                                <DatePicker Date="{Binding EndDate}"
                                            TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>

                    <!-- Production Lines -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Production Lines"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"/>

                        <CollectionView ItemsSource="{Binding ProductionLines}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton IsChecked="{Binding IsSelected}"
                                              Content="{Binding LineName}"
                                              TextColor="{DynamicResource PrimaryTextColor}"/>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Button Text="Select All"
                                Command="{Binding SelectAllLinesCommand}"
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource TextButtonColor}"
                                FontSize="12"/>
                    </VerticalStackLayout>

                    <!-- Quick Stats -->
                    <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                           Padding="15"
                           CornerRadius="8">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Production Stats"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"/>

                            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="Avg OEE:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding AverageOEE, StringFormat='{0:P1}'}"
                                           TextColor="{DynamicResource SuccessColor}"
                                           FontSize="12"/>
                                </Grid>

                                <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="Total Output:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding TotalOutput}"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="12"/>
                                </Grid>

                                <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="Downtime %:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding DowntimePercentage, StringFormat='{0:P1}'}"
                                           TextColor="{DynamicResource DangerColor}"
                                           FontSize="12"/>
                                </Grid>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- Report Dashboard -->
            <Frame Grid.Column="1"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="10"
                   Margin="20,0,0,0">
                <ScrollView>
                    <VerticalStackLayout Spacing="20">
                        <!-- Report Header -->
                        <Grid>
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding SelectedReportType}" 
                                       FontSize="20"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding DateRangeText}"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       FontSize="14"/>
                            </VerticalStackLayout>

                            <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                                <Button Text="Print"
                                        Command="{Binding PrintReportCommand}"
                                        BackgroundColor="Transparent"
                                        TextColor="{DynamicResource TextButtonColor}"/>
                                <Button Text="Share"
                                        Command="{Binding ShareReportCommand}"
                                        BackgroundColor="Transparent"
                                        TextColor="{DynamicResource TextButtonColor}"/>
                                <Button Text="Schedule"
                                        Command="{Binding ScheduleReportCommand}"
                                        BackgroundColor="Transparent"
                                        TextColor="{DynamicResource TextButtonColor}"/>
                            </HorizontalStackLayout>
                        </Grid>

                        <!-- Key Performance Indicators -->
                        <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="15"
                               CornerRadius="8">
                            <VerticalStackLayout Spacing="15">
                                <Label Text="Key Performance Indicators" 
                                       FontSize="18"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontAttributes="Bold"/>

                                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                                    <!-- Overall OEE -->
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="Overall OEE"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="14"/>
                                        <Label Text="{Binding OverallOEE, StringFormat='{0:P1}'}"
                                               TextColor="{Binding OEEColor}"
                                               FontSize="28"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding OEETrend}"
                                               TextColor="{Binding OEETrendColor}"
                                               FontSize="12"/>
                                    </VerticalStackLayout>

                                    <!-- Production Output -->
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="Production Output"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="14"/>
                                        <Label Text="{Binding TotalProductionOutput}"
                                               TextColor="{DynamicResource InfoColor}"
                                               FontSize="28"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding OutputTrend}"
                                               TextColor="{Binding OutputTrendColor}"
                                               FontSize="12"/>
                                    </VerticalStackLayout>

                                    <!-- Average Yield -->
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="Average Yield"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="14"/>
                                        <Label Text="{Binding AverageYield, StringFormat='{0:P1}'}"
                                               TextColor="{DynamicResource SuccessColor}"
                                               FontSize="28"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding YieldTrend}"
                                               TextColor="{Binding YieldTrendColor}"
                                               FontSize="12"/>
                                    </VerticalStackLayout>

                                    <!-- Cost Per Unit -->
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="Cost Per Unit"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="14"/>
                                        <Label Text="{Binding CostPerUnit, StringFormat='${0:F2}'}"
                                               TextColor="{Binding CostColor}"
                                               FontSize="28"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding CostTrend}"
                                               TextColor="{Binding CostTrendColor}"
                                               FontSize="12"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Production Efficiency by Line -->
                        <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="15"
                               CornerRadius="8">
                            <VerticalStackLayout Spacing="15">
                                <Label Text="Production Efficiency by Line" 
                                       FontSize="18"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontAttributes="Bold"/>

                                <CollectionView ItemsSource="{Binding LineEfficiency}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                                                   Padding="15"
                                                   CornerRadius="8"
                                                   Margin="0,0,0,10">
                                                <Grid ColumnDefinitions="*,Auto,Auto" 
                                                      RowDefinitions="Auto,Auto"
                                                      ColumnSpacing="15"
                                                      RowSpacing="10">
                                                    <!-- Line Info -->
                                                    <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="5">
                                                        <Label Text="{Binding LineName}"
                                                               TextColor="{DynamicResource PrimaryTextColor}"
                                                               FontSize="16"/>
                                                        <Label Text="{Binding ProductType}"
                                                               TextColor="{DynamicResource SecondaryTextColor}"
                                                               FontSize="12"/>
                                                    </VerticalStackLayout>

                                                    <!-- OEE -->
                                                    <VerticalStackLayout Grid.Row="0" Grid.Column="1"
                                                                         HorizontalOptions="End"
                                                                         Spacing="2">
                                                        <Label Text="OEE"
                                                               TextColor="{DynamicResource SecondaryTextColor}"
                                                               FontSize="11"/>
                                                        <Label Text="{Binding OEE, StringFormat='{0:P1}'}"
                                                               TextColor="{Binding OEEColor}"
                                                               FontSize="16"/>
                                                    </VerticalStackLayout>

                                                    <!-- Status -->
                                                    <Frame Grid.Row="0" Grid.Column="2"
                                                           BackgroundColor="{Binding StatusColor}"
                                                           Padding="5,2"
                                                           CornerRadius="4">
                                                        <Label Text="{Binding Status}"
                                                               TextColor="{DynamicResource PrimaryButtonTextColor}"
                                                               FontSize="11"/>
                                                    </Frame>

                                                    <!-- Performance Metrics -->
                                                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                                          ColumnDefinitions="*,*,*,*">
                                                        <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                            <Label Text="Output"
                                                                   TextColor="{DynamicResource SecondaryTextColor}"
                                                                   FontSize="11"/>
                                                            <Label Text="{Binding Output}"
                                                                   TextColor="{DynamicResource PrimaryTextColor}"
                                                                   FontSize="12"/>
                                                        </VerticalStackLayout>

                                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                            <Label Text="Yield"
                                                                   TextColor="{DynamicResource SecondaryTextColor}"
                                                                   FontSize="11"/>
                                                            <Label Text="{Binding Yield, StringFormat='{0:P1}'}"
                                                                   TextColor="{DynamicResource PrimaryTextColor}"
                                                                   FontSize="12"/>
                                                        </VerticalStackLayout>

                                                        <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                            <Label Text="Downtime"
                                                                   TextColor="{DynamicResource SecondaryTextColor}"
                                                                   FontSize="11"/>
                                                            <Label Text="{Binding Downtime, StringFormat='{0:F1}h'}"
                                                                   TextColor="{DynamicResource PrimaryTextColor}"
                                                                   FontSize="12"/>
                                                        </VerticalStackLayout>

                                                        <VerticalStackLayout Grid.Column="3" Spacing="2">
                                                            <Label Text="Cost/Unit"
                                                                   TextColor="{DynamicResource SecondaryTextColor}"
                                                                   FontSize="11"/>
                                                            <Label Text="{Binding CostPerUnit, StringFormat='${0:F2}'}"
                                                                   TextColor="{DynamicResource PrimaryTextColor}"
                                                                   FontSize="12"/>
                                                        </VerticalStackLayout>
                                                    </Grid>
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Downtime Analysis -->
                        <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="15"
                               CornerRadius="8">
                            <VerticalStackLayout Spacing="15">
                                <Label Text="Downtime Analysis" 
                                       FontSize="18"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontAttributes="Bold"/>

                                <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                                    <!-- Downtime Causes -->
                                    <VerticalStackLayout Grid.Column="0" Spacing="10">
                                        <Label Text="Downtime Causes"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="14"/>

                                        <CollectionView ItemsSource="{Binding DowntimeCauses}">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid ColumnDefinitions="*,Auto,Auto" Padding="10">
                                                        <Label Grid.Column="0"
                                                               Text="{Binding Cause}"
                                                               TextColor="{DynamicResource PrimaryTextColor}"
                                                               FontSize="12"/>
                                                        <ProgressBar Grid.Column="1"
                                                                     Progress="{Binding Percentage}"
                                                                     ProgressColor="{DynamicResource PrimaryColor}"
                                                                     WidthRequest="100"
                                                                     VerticalOptions="Center"/>
                                                        <Label Grid.Column="2"
                                                               Text="{Binding Percentage, StringFormat='{0:P1}'}"
                                                               TextColor="{DynamicResource PrimaryTextColor}"
                                                               FontSize="12"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </VerticalStackLayout>

                                    <!-- Downtime Trends -->
                                    <VerticalStackLayout Grid.Column="1" Spacing="10">
                                        <Label Text="Downtime Trends"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="14"/>

                                        <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                                               HeightRequest="150"
                                               CornerRadius="8"
                                               Padding="0">
                                            <Label Text="Downtime Trend Chart"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                                        </Frame>
                                    </VerticalStackLayout>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Cost Analysis -->
                        <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="15"
                               CornerRadius="8">
                            <VerticalStackLayout Spacing="15">
                                <Label Text="Cost Analysis" 
                                       FontSize="18"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontAttributes="Bold"/>

                                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                                    <!-- Material Costs -->
                                    <VerticalStackLayout Grid.Column="0" Spacing="10">
                                        <Label Text="Material Costs"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="14"/>

                                        <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                                               Padding="15"
                                               CornerRadius="8">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Total"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="12"/>
                                                <Label Text="{Binding MaterialCosts, StringFormat='${0:N0}'}"
                                                       TextColor="{DynamicResource PrimaryColor}"
                                                       FontSize="24"
                                                       FontAttributes="Bold"/>
                                                <Label Text="{Binding MaterialCostTrend}"
                                                       TextColor="{Binding MaterialCostTrendColor}"
                                                       FontSize="11"/>
                                            </VerticalStackLayout>
                                        </Frame>
                                    </VerticalStackLayout>

                                    <!-- Labor Costs -->
                                    <VerticalStackLayout Grid.Column="1" Spacing="10">
                                        <Label Text="Labor Costs"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="14"/>

                                        <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                                               Padding="15"
                                               CornerRadius="8">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Total"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="12"/>
                                                <Label Text="{Binding LaborCosts, StringFormat='${0:N0}'}"
                                                       TextColor="{DynamicResource SecondaryColor}"
                                                       FontSize="24"
                                                       FontAttributes="Bold"/>
                                                <Label Text="{Binding LaborCostTrend}"
                                                       TextColor="{Binding LaborCostTrendColor}"
                                                       FontSize="11"/>
                                            </VerticalStackLayout>
                                        </Frame>
                                    </VerticalStackLayout>

                                    <!-- Overhead Costs -->
                                    <VerticalStackLayout Grid.Column="2" Spacing="10">
                                        <Label Text="Overhead Costs"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="14"/>

                                        <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                                               Padding="15"
                                               CornerRadius="8">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Total"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="12"/>
                                                <Label Text="{Binding OverheadCosts, StringFormat='${0:N0}'}"
                                                       TextColor="{DynamicResource AccentColor}"
                                                       FontSize="24"
                                                       FontAttributes="Bold"/>
                                                <Label Text="{Binding OverheadCostTrend}"
                                                       TextColor="{Binding OverheadCostTrendColor}"
                                                       FontSize="11"/>
                                            </VerticalStackLayout>
                                        </Frame>
                                    </VerticalStackLayout>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>

                    </VerticalStackLayout>
                </ScrollView>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>