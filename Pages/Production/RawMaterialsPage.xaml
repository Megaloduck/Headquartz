<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.Production.RawMaterialsPage"
             Title="RawMaterialsPage">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="{DynamicResource HeaderBackgroundColor}"
               Padding="20"
               CornerRadius="0">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="Raw Materials Management" 
                           FontSize="24" 
                           TextColor="{DynamicResource PrimaryTextColor}"
                           FontAttributes="Bold"/>
                    <Label Text="Material requirements, inventory tracking, supplier orders, material quality"
                           TextColor="{DynamicResource SecondaryTextColor}"/>
                </VerticalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <Button Text="New Order"
                            Command="{Binding CreateMaterialOrderCommand}"
                            BackgroundColor="{DynamicResource PrimaryButtonBackground}"
                            TextColor="{DynamicResource PrimaryButtonTextColor}"
                            Padding="15,10"/>
                    <Button Text="Receive Stock"
                            Command="{Binding ReceiveStockCommand}"
                            BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                            TextColor="{DynamicResource SecondaryButtonTextColor}"
                            Padding="15,10"/>
                </HorizontalStackLayout>
            </Grid>
        </Frame>

        <!-- Main Content -->
        <Grid Grid.Row="1" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Inventory Summary -->
            <Frame Grid.Column="0"
                   BackgroundColor="{DynamicResource SidebarBackgroundColor}"
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="20">
                    <!-- Inventory Stats -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Inventory Summary"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="16"
                               FontAttributes="Bold"/>

                        <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="15"
                               CornerRadius="8">
                            <VerticalStackLayout Spacing="8">
                                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               Text="Total SKUs:"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="12"/>
                                        <Label Grid.Column="1"
                                               Text="{Binding TotalSKUs}"
                                               TextColor="{DynamicResource PrimaryTextColor}"
                                               FontSize="12"/>
                                    </Grid>

                                    <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               Text="Total Value:"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="12"/>
                                        <Label Grid.Column="1"
                                               Text="{Binding TotalInventoryValue, StringFormat='${0:N0}'}"
                                               TextColor="{DynamicResource PrimaryTextColor}"
                                               FontSize="12"/>
                                    </Grid>

                                    <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0"
                                               Text="Low Stock Items:"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="12"/>
                                        <Label Grid.Column="1"
                                               Text="{Binding LowStockItems}"
                                               TextColor="{DynamicResource DangerColor}"
                                               FontSize="12"/>
                                    </Grid>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Quick Filters -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Quick Filters"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"/>

                        <Button Text="Low Stock"
                                Command="{Binding FilterLowStockCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Critical Items"
                                Command="{Binding FilterCriticalCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Overstock"
                                Command="{Binding FilterOverstockCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Clear Filters"
                                Command="{Binding ClearFiltersCommand}"
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource TextButtonColor}"/>
                    </VerticalStackLayout>

                    <!-- Material Categories -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Material Categories"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"/>

                        <CollectionView ItemsSource="{Binding MaterialCategories}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,Auto" Padding="10">
                                        <Label Grid.Column="0"
                                               Text="{Binding CategoryName}"
                                               TextColor="{DynamicResource PrimaryTextColor}"
                                               FontSize="12"/>
                                        <Label Grid.Column="1"
                                               Text="{Binding ItemCount}"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="12"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!-- Quick Actions -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Quick Actions"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"
                               FontAttributes="Bold"/>

                        <Button Text="Inventory Count"
                                Command="{Binding StartInventoryCountCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Quality Check"
                                Command="{Binding StartQualityCheckCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Generate Report"
                                Command="{Binding GenerateInventoryReportCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Materials Inventory -->
            <Frame Grid.Column="1"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="10"
                   Margin="20,0,0,0">
                <Grid RowDefinitions="Auto,*">
                    <!-- Inventory Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <HorizontalStackLayout Spacing="10">
                            <SearchBar Text="{Binding SearchText}"
                                       Placeholder="Search materials..."
                                       WidthRequest="200"
                                       BackgroundColor="{DynamicResource InputBackgroundColor}"
                                       CancelButtonColor="{DynamicResource PrimaryColor}"/>
                            <Picker Title="Category"
                                    ItemsSource="{Binding AllCategories}"
                                    SelectedItem="{Binding SelectedCategory}"
                                    WidthRequest="150"/>
                            <Picker Title="Sort By"
                                    ItemsSource="{Binding SortOptions}"
                                    SelectedItem="{Binding SelectedSortOption}"
                                    WidthRequest="150"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                            <Button Text="Import"
                                    Command="{Binding ImportInventoryCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource TextButtonColor}"/>
                            <Button Text="Export"
                                    Command="{Binding ExportInventoryCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource TextButtonColor}"/>
                        </HorizontalStackLayout>
                    </Grid>

                    <!-- Materials Grid -->
                    <CollectionView Grid.Row="1" 
                                    ItemsSource="{Binding FilteredMaterials}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                                       Padding="15"
                                       CornerRadius="8"
                                       Margin="0,0,0,15">
                                    <Grid ColumnDefinitions="Auto,*,Auto" 
                                          RowDefinitions="Auto,Auto,Auto"
                                          ColumnSpacing="15"
                                          RowSpacing="10">
                                        <!-- Material Icon -->
                                        <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"
                                               BackgroundColor="{DynamicResource BadgeBackgroundColor}"
                                               Padding="10"
                                               CornerRadius="8"
                                               WidthRequest="50"
                                               HeightRequest="50">
                                            <Label Text="{Binding MaterialIcon}"
                                                   FontSize="20"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   TextColor="{DynamicResource BadgeTextColor}"/>
                                        </Frame>

                                        <!-- Material Details -->
                                        <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                                            <Label Text="{Binding MaterialName}"
                                                   TextColor="{DynamicResource PrimaryTextColor}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding MaterialCode}"
                                                   TextColor="{DynamicResource SecondaryTextColor}"
                                                   FontSize="12"/>
                                            <Label Text="{Binding Category}"
                                                   TextColor="{DynamicResource SecondaryTextColor}"
                                                   FontSize="12"/>
                                        </VerticalStackLayout>

                                        <!-- Stock Status -->
                                        <Frame Grid.Row="0" Grid.Column="2"
                                               BackgroundColor="{Binding StockStatusColor}"
                                               Padding="5,2"
                                               CornerRadius="4">
                                            <Label Text="{Binding StockStatus}"
                                                   TextColor="{DynamicResource PrimaryButtonTextColor}"
                                                   FontSize="11"/>
                                        </Frame>

                                        <!-- Stock Levels -->
                                        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                              ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                <Label Text="Current Stock"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding CurrentStock}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="Min Stock"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding MinimumStock}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                <Label Text="Max Stock"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding MaximumStock}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="3" Spacing="2">
                                                <Label Text="Unit"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding Unit}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>
                                        </Grid>

                                        <!-- Progress Bar & Actions -->
                                        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
                                            <!-- Stock Level Progress -->
                                            <ProgressBar Progress="{Binding StockLevelPercentage}"
                                                         ProgressColor="{Binding StockLevelColor}"/>
                                            <Label Text="{Binding StockLevelPercentage, StringFormat='{0:P0}'}"
                                                   HorizontalOptions="Center"
                                                   TextColor="{DynamicResource PrimaryTextColor}"
                                                   BackgroundColor="{DynamicResource SurfaceColor}"
                                                   Padding="10,0"/>

                                            <!-- Action Buttons -->
                                            <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                                                <Button Text="Order"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, 
                                                                Path=BindingContext.OrderMaterialCommand}"
                                                        CommandParameter="{Binding}"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{DynamicResource TextButtonColor}"/>
                                                <Button Text="Adjust"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, 
                                                                Path=BindingContext.AdjustStockCommand}"
                                                        CommandParameter="{Binding}"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{DynamicResource TextButtonColor}"/>
                                                <Button Text="Details"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, 
                                                                Path=BindingContext.ViewMaterialDetailsCommand}"
                                                        CommandParameter="{Binding}"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{DynamicResource TextButtonColor}"/>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>