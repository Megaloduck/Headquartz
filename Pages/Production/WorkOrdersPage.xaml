<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.Production.WorkOrdersPage"
             Title="WorkOrdersPage">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="{DynamicResource HeaderBackgroundColor}"
               Padding="20"
               CornerRadius="0">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="Work Order Management" 
                           FontSize="24" 
                           TextColor="{DynamicResource PrimaryTextColor}"
                           FontAttributes="Bold"/>
                    <Label Text="Create work orders, assign resources, track progress, completion verification"
                           TextColor="{DynamicResource SecondaryTextColor}"/>
                </VerticalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <Button Text="+ New Work Order"
                            Command="{Binding CreateWorkOrderCommand}"
                            BackgroundColor="{DynamicResource PrimaryButtonBackground}"
                            TextColor="{DynamicResource PrimaryButtonTextColor}"
                            Padding="20,12"/>
                </HorizontalStackLayout>
            </Grid>
        </Frame>

        <!-- Main Content -->
        <Grid Grid.Row="1" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Filters & Actions -->
            <Frame Grid.Column="0"
                   BackgroundColor="{DynamicResource SidebarBackgroundColor}"
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="20">
                    <!-- Search -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Search Work Orders"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"/>
                        <SearchBar Text="{Binding SearchText}"
                                   Placeholder="Search by ID or product..."
                                   BackgroundColor="{DynamicResource InputBackgroundColor}"
                                   CancelButtonColor="{DynamicResource PrimaryColor}"/>
                    </VerticalStackLayout>

                    <!-- Status Filters -->
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Filter by Status"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"/>

                        <RadioButton IsChecked="{Binding FilterPending}" 
                                  Content="Pending"
                                  TextColor="{DynamicResource PrimaryTextColor}"/>
                        <RadioButton IsChecked="{Binding FilterInProgress}" 
                                  Content="In Progress"
                                  TextColor="{DynamicResource PrimaryTextColor}"/>
                        <RadioButton IsChecked="{Binding FilterCompleted}" 
                                  Content="Completed"
                                  TextColor="{DynamicResource PrimaryTextColor}"/>
                        <RadioButton IsChecked="{Binding FilterDelayed}" 
                                  Content="Delayed"
                                  TextColor="{DynamicResource PrimaryTextColor}"/>
                    </VerticalStackLayout>

                    <!-- Priority Filters -->
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Filter by Priority"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"/>

                        <RadioButton IsChecked="{Binding FilterHighPriority}" 
                                  Content="High Priority"
                                  TextColor="{DynamicResource PrimaryTextColor}"/>
                        <RadioButton IsChecked="{Binding FilterMediumPriority}" 
                                  Content="Medium Priority"
                                  TextColor="{DynamicResource PrimaryTextColor}"/>
                        <RadioButton IsChecked="{Binding FilterLowPriority}" 
                                  Content="Low Priority"
                                  TextColor="{DynamicResource PrimaryTextColor}"/>
                    </VerticalStackLayout>

                    <!-- Quick Stats -->
                    <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                           Padding="15"
                           CornerRadius="8">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Work Order Stats"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"/>

                            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="Total Active:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding TotalActiveOrders}"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="12"/>
                                </Grid>

                                <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="On Time:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding OnTimePercentage, StringFormat='{0:P1}'}"
                                           TextColor="{DynamicResource SuccessColor}"
                                           FontSize="12"/>
                                </Grid>

                                <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="Avg Completion:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding AverageCompletionDays, StringFormat='{0:F1} days'}"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="12"/>
                                </Grid>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Quick Actions -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Quick Actions"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"
                               FontAttributes="Bold"/>

                        <Button Text="Bulk Update"
                                Command="{Binding BulkUpdateCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Import Orders"
                                Command="{Binding ImportOrdersCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Export Report"
                                Command="{Binding ExportReportCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Work Orders Grid -->
            <Frame Grid.Column="1"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="10"
                   Margin="20,0,0,0">
                <Grid RowDefinitions="Auto,*">
                    <!-- Grid Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Label Text="Work Orders"
                               FontSize="20"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontAttributes="Bold"/>

                        <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                            <Button Text="Refresh"
                                    Command="{Binding RefreshCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource TextButtonColor}"/>
                            <Button Text="Print List"
                                    Command="{Binding PrintListCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource TextButtonColor}"/>
                        </HorizontalStackLayout>
                    </Grid>

                    <!-- Work Orders Collection -->
                    <CollectionView Grid.Row="1" 
                                    ItemsSource="{Binding FilteredWorkOrders}"
                                    SelectionMode="Single"
                                    SelectedItem="{Binding SelectedWorkOrder}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical"
                                             Span="1"
                                             VerticalItemSpacing="15"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                                       Padding="20"
                                       CornerRadius="10">
                                    <Grid ColumnDefinitions="Auto,*,Auto" 
                                          RowDefinitions="Auto,Auto,Auto"
                                          ColumnSpacing="15"
                                          RowSpacing="10">
                                        <!-- Work Order ID -->
                                        <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                               BackgroundColor="{DynamicResource BadgeBackgroundColor}"
                                               Padding="10"
                                               CornerRadius="8"
                                               WidthRequest="60"
                                               HeightRequest="60">
                                            <Label Text="{Binding WorkOrderId}"
                                                   TextColor="{DynamicResource BadgeTextColor}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Frame>

                                        <!-- Work Order Details -->
                                        <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                                            <Label Text="{Binding ProductName}"
                                                   TextColor="{DynamicResource PrimaryTextColor}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding Description}"
                                                   TextColor="{DynamicResource SecondaryTextColor}"
                                                   FontSize="12"
                                                   LineBreakMode="WordWrap"/>
                                        </VerticalStackLayout>

                                        <!-- Priority & Status -->
                                        <Grid Grid.Row="0" Grid.Column="2"
                                              RowDefinitions="Auto,Auto"
                                              RowSpacing="5">
                                            <!-- Priority -->
                                            <Frame Grid.Row="0"
                                                   BackgroundColor="{Binding PriorityColor}"
                                                   Padding="5,2"
                                                   CornerRadius="4">
                                                <Label Text="{Binding Priority}"
                                                       TextColor="{DynamicResource PrimaryButtonTextColor}"
                                                       FontSize="11"/>
                                            </Frame>

                                            <!-- Status -->
                                            <HorizontalStackLayout Grid.Row="1"
                                                                   Spacing="5"
                                                                   HorizontalOptions="End">
                                                <BoxView Color="{Binding StatusColor}"
                                                         WidthRequest="8"
                                                         HeightRequest="8"
                                                         VerticalOptions="Center"
                                                         CornerRadius="4"/>
                                                <Label Text="{Binding Status}"
                                                       TextColor="{Binding StatusColor}"
                                                       FontSize="12"/>
                                            </HorizontalStackLayout>
                                        </Grid>

                                        <!-- Production Details -->
                                        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                              ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                <Label Text="Quantity"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding Quantity}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="Production Line"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding ProductionLine}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                <Label Text="Start Date"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding StartDate, StringFormat='{0:MMM dd}'}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="3" Spacing="2">
                                                <Label Text="Due Date"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding DueDate, StringFormat='{0:MMM dd}'}"
                                                       TextColor="{Binding DueDateColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>
                                        </Grid>

                                        <!-- Progress & Actions -->
                                        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                                            <!-- Progress Bar -->
                                            <ProgressBar Progress="{Binding Progress}"
                                                         ProgressColor="{DynamicResource PrimaryColor}"/>
                                            <Label Text="{Binding Progress, StringFormat='{0:P0}'}"
                                                   HorizontalOptions="Center"
                                                   TextColor="{DynamicResource PrimaryTextColor}"
                                                   BackgroundColor="{DynamicResource SurfaceColor}"
                                                   Padding="10,0"/>

                                            <!-- Action Buttons -->
                                            <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                                                <Button Text="Update"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, 
                                                                Path=BindingContext.UpdateWorkOrderCommand}"
                                                        CommandParameter="{Binding}"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{DynamicResource TextButtonColor}"/>
                                                <Button Text="View Details"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, 
                                                                Path=BindingContext.ViewWorkOrderDetailsCommand}"
                                                        CommandParameter="{Binding}"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{DynamicResource TextButtonColor}"/>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>