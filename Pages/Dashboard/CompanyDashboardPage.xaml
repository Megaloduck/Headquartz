<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Headquartz.PageModels"
             x:Class="Headquartz.Pages.Dashboard.CompanyDashboardPage"          
             Title="Company Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Page Header -->
            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Start">
                <VerticalStackLayout Grid.Column="0" Spacing="4">
                    <Label Text="Company Dashboard" 
                           FontSize="24" 
                           TextColor="{DynamicResource PrimaryTextColor}"
                           FontAttributes="Bold" />
                    <Label Text="Complete overview of business operations and performance" 
                           TextColor="{DynamicResource SecondaryTextColor}"
                           FontSize="14" />
                </VerticalStackLayout>

                <!-- Company Health -->
                <Frame Grid.Column="1"
                       BackgroundColor="{DynamicResource SurfaceColor}"
                       Padding="12,8"
                       CornerRadius="12"
                       BorderColor="{DynamicResource BorderColor}">
                    <HorizontalStackLayout Spacing="8">
                        <BoxView Color="{Binding CompanyHealthColor}"
                                 WidthRequest="10"
                                 HeightRequest="10"
                                 VerticalOptions="Center"
                                 CornerRadius="5" />
                        <Label Text="{Binding CompanyHealth}"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="12"
                               FontAttributes="Bold" />
                    </HorizontalStackLayout>
                </Frame>
            </Grid>

            <!-- Key Performance Indicators -->
            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="16">
                <!-- Financial Health -->
                <Frame Grid.Column="0"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="16"
                       CornerRadius="10"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Frame BackgroundColor="#E8F4FF"
                                   Padding="8"
                                   CornerRadius="8">
                                <Label Text="ðŸ’°"
                                       FontSize="16" />
                            </Frame>
                            <Label Text="Cash Position"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <Label Text="{Binding CashBalance, StringFormat='${0:N0}'}"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="24"
                               FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Available funds"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   FontSize="12" />
                            <Label Grid.Column="1"
                                   Text="{Binding CashTrend, StringFormat='{0:+$0;-$0;0}'}"
                                   TextColor="{Binding CashTrendColor}"
                                   FontSize="12"
                                   FontAttributes="Bold" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Revenue Performance -->
                <Frame Grid.Column="1"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="16"
                       CornerRadius="10"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Frame BackgroundColor="#E8F7FF"
                                   Padding="8"
                                   CornerRadius="8">
                                <Label Text="ðŸ“ˆ"
                                       FontSize="16" />
                            </Frame>
                            <Label Text="Revenue"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <Label Text="{Binding MonthlyRevenue, StringFormat='${0:N0}'}"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="24"
                               FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="This month"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   FontSize="12" />
                            <Label Grid.Column="1"
                                   Text="{Binding RevenueGrowth, StringFormat='{0:+0.0%;-0.0%;0}'}"
                                   TextColor="{Binding RevenueGrowthColor}"
                                   FontSize="12"
                                   FontAttributes="Bold" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Operational Efficiency -->
                <Frame Grid.Column="2"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="16"
                       CornerRadius="10"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Frame BackgroundColor="#F0F7FF"
                                   Padding="8"
                                   CornerRadius="8">
                                <Label Text="âš¡"
                                       FontSize="16" />
                            </Frame>
                            <Label Text="Efficiency"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <Label Text="{Binding OperationalEfficiency, StringFormat='{0:P0}'}"
                               TextColor="{Binding OperationalEfficiencyColor}"
                               FontSize="24"
                               FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Overall efficiency"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   FontSize="12" />
                            <ProgressBar Grid.Column="1"
                                         Progress="{Binding OperationalEfficiency}"
                                         ProgressColor="{Binding OperationalEfficiencyColor}"
                                         WidthRequest="60"
                                         VerticalOptions="Center" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Market Position -->
                <Frame Grid.Column="3"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="16"
                       CornerRadius="10"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Frame BackgroundColor="#F5F7FA"
                                   Padding="8"
                                   CornerRadius="8">
                                <Label Text="ðŸŒ"
                                       FontSize="16" />
                            </Frame>
                            <Label Text="Market Share"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <Label Text="{Binding MarketShare, StringFormat='{0:P1}'}"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="24"
                               FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Industry position"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   FontSize="12" />
                            <Label Grid.Column="1"
                                   Text="{Binding MarketShareChange, StringFormat='{0:+0.0%;-0.0%;0}'}"
                                   TextColor="{Binding MarketShareChangeColor}"
                                   FontSize="12"
                                   FontAttributes="Bold" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Department Performance -->
            <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="12"
                   HasShadow="True">
                <VerticalStackLayout Spacing="16">
                    <!-- Header -->
                    <Grid>
                        <HorizontalStackLayout Spacing="12">
                            <Frame BackgroundColor="{DynamicResource BadgeBackgroundColor}"
                                   Padding="10"
                                   CornerRadius="10">
                                <Label Text="ðŸ¢"
                                       FontSize="20"
                                       TextColor="{DynamicResource BadgeTextColor}" />
                            </Frame>
                            <VerticalStackLayout Spacing="2">
                                <Label Text="Department Performance"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="18"
                                       FontAttributes="Bold" />
                                <Label Text="Performance across business units"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       FontSize="12" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <Button Text="View Details â†’"
                                Command="{Binding ViewDepartmentDetailsCommand}"
                                HorizontalOptions="End"
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource TextButtonColor}"
                                FontSize="12" />
                    </Grid>

                    <!-- Department Grid -->
                    <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="16">
                        <!-- Sales Department -->
                        <Frame Grid.Column="0"
                               BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="16"
                               CornerRadius="10">
                            <VerticalStackLayout Spacing="12">
                                <Frame BackgroundColor="#FFE8E8"
                                       Padding="10"
                                       CornerRadius="8">
                                    <Label Text="ðŸ›’"
                                           FontSize="16" />
                                </Frame>
                                <Label Text="Sales"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding SalesPerformance, StringFormat='{0:P0}'}"
                                       TextColor="{Binding SalesPerformanceColor}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center" />
                                <ProgressBar Progress="{Binding SalesPerformance}"
                                             ProgressColor="{Binding SalesPerformanceColor}"
                                             HeightRequest="4" />
                                <Label Text="{Binding SalesTargetCompletion, StringFormat='{0:P0} of target'}"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       FontSize="11"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Production Department -->
                        <Frame Grid.Column="1"
                               BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="16"
                               CornerRadius="10">
                            <VerticalStackLayout Spacing="12">
                                <Frame BackgroundColor="#E8F4FF"
                                       Padding="10"
                                       CornerRadius="8">
                                    <Label Text="âš™ï¸"
                                           FontSize="16" />
                                </Frame>
                                <Label Text="Production"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding ProductionEfficiency, StringFormat='{0:P0}'}"
                                       TextColor="{Binding ProductionEfficiencyColor}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center" />
                                <ProgressBar Progress="{Binding ProductionEfficiency}"
                                             ProgressColor="{Binding ProductionEfficiencyColor}"
                                             HeightRequest="4" />
                                <Label Text="{Binding UnitsProduced, StringFormat='{0:N0} units'}"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       FontSize="11"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Logistics Department -->
                        <Frame Grid.Column="2"
                               BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="16"
                               CornerRadius="10">
                            <VerticalStackLayout Spacing="12">
                                <Frame BackgroundColor="#E8F7E8"
                                       Padding="10"
                                       CornerRadius="8">
                                    <Label Text="ðŸšš"
                                           FontSize="16" />
                                </Frame>
                                <Label Text="Logistics"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding LogisticsEfficiency, StringFormat='{0:P0}'}"
                                       TextColor="{Binding LogisticsEfficiencyColor}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center" />
                                <ProgressBar Progress="{Binding LogisticsEfficiency}"
                                             ProgressColor="{Binding LogisticsEfficiencyColor}"
                                             HeightRequest="4" />
                                <Label Text="{Binding OnTimeDelivery, StringFormat='{0:P0} on-time'}"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       FontSize="11"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Finance Department -->
                        <Frame Grid.Column="3"
                               BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="16"
                               CornerRadius="10">
                            <VerticalStackLayout Spacing="12">
                                <Frame BackgroundColor="#FFF8E8"
                                       Padding="10"
                                       CornerRadius="8">
                                    <Label Text="ðŸ’µ"
                                           FontSize="16" />
                                </Frame>
                                <Label Text="Finance"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding FinanceHealth, StringFormat='{0:P0}'}"
                                       TextColor="{Binding FinanceHealthColor}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center" />
                                <ProgressBar Progress="{Binding FinanceHealth}"
                                             ProgressColor="{Binding FinanceHealthColor}"
                                             HeightRequest="4" />
                                <Label Text="{Binding ProfitMargin, StringFormat='{0:P0} margin'}"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       FontSize="11"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Main Metrics Grid -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                <!-- Financial Overview -->
                <Frame Grid.Column="0"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="20"
                       CornerRadius="12"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="16">
                        <!-- Header -->
                        <Grid>
                            <HorizontalStackLayout Spacing="12">
                                <Frame BackgroundColor="{DynamicResource BadgeBackgroundColor}"
                                       Padding="10"
                                       CornerRadius="10">
                                    <Label Text="ðŸ“Š"
                                           FontSize="20"
                                           TextColor="{DynamicResource BadgeTextColor}" />
                                </Frame>
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="Financial Overview"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="18"
                                           FontAttributes="Bold" />
                                    <Label Text="Q2 Performance"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <Button Text="Details â†’"
                                    Command="{Binding ViewFinancialDetailsCommand}"
                                    HorizontalOptions="End"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource TextButtonColor}"
                                    FontSize="12" />
                        </Grid>

                        <!-- Financial Metrics -->
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12">
                            <!-- Revenue -->
                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <HorizontalStackLayout Grid.Column="0" Spacing="8">
                                    <BoxView Color="{DynamicResource SuccessColor}"
                                             WidthRequest="4"
                                             HeightRequest="20"
                                             VerticalOptions="Center"
                                             CornerRadius="2" />
                                    <Label Text="Revenue"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="14" />
                                </HorizontalStackLayout>
                                <Label Grid.Column="1"
                                       Text="{Binding Revenue, StringFormat='${0:N0}'}"
                                       TextColor="{DynamicResource SuccessColor}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                            </Grid>

                            <!-- Expenses -->
                            <Grid Grid.Row="1" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <HorizontalStackLayout Grid.Column="0" Spacing="8">
                                    <BoxView Color="{DynamicResource DangerColor}"
                                             WidthRequest="4"
                                             HeightRequest="20"
                                             VerticalOptions="Center"
                                             CornerRadius="2" />
                                    <Label Text="Expenses"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="14" />
                                </HorizontalStackLayout>
                                <Label Grid.Column="1"
                                       Text="{Binding Expenses, StringFormat='${0:N0}'}"
                                       TextColor="{DynamicResource DangerColor}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                            </Grid>

                            <!-- Net Profit -->
                            <Grid Grid.Row="2" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <Label Grid.Column="0"
                                       Text="Net Profit"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Grid.Column="1"
                                       Text="{Binding NetProfit, StringFormat='${0:N0}'}"
                                       TextColor="{Binding NetProfitColor}"
                                       FontSize="20"
                                       FontAttributes="Bold" />
                            </Grid>

                            <!-- Profit Margin -->
                            <Grid Grid.Row="3" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <Label Grid.Column="0"
                                       Text="Profit Margin"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       FontSize="13" />
                                <Label Grid.Column="1"
                                       Text="{Binding ProfitMargin, StringFormat='{0:P1}'}"
                                       TextColor="{Binding ProfitMarginColor}"
                                       FontSize="14"
                                       FontAttributes="Bold" />
                            </Grid>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Inventory & Orders -->
                <Frame Grid.Column="1"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="20"
                       CornerRadius="12"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="16">
                        <!-- Header -->
                        <Grid>
                            <HorizontalStackLayout Spacing="12">
                                <Frame BackgroundColor="{DynamicResource BadgeBackgroundColor}"
                                       Padding="10"
                                       CornerRadius="10">
                                    <Label Text="ðŸ“¦"
                                           FontSize="20"
                                           TextColor="{DynamicResource BadgeTextColor}" />
                                </Frame>
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="Inventory &amp; Orders"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="18"
                                           FontAttributes="Bold" />
                                    <Label Text="Current stock and order status"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <Button Text="Details â†’"
                                    Command="{Binding ViewInventoryDetailsCommand}"
                                    HorizontalOptions="End"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource TextButtonColor}"
                                    FontSize="12" />
                        </Grid>

                        <!-- Inventory Metrics -->
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12">
                            <!-- Total Inventory -->
                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <HorizontalStackLayout Grid.Column="0" Spacing="8">
                                    <BoxView Color="{DynamicResource InfoColor}"
                                             WidthRequest="4"
                                             HeightRequest="20"
                                             VerticalOptions="Center"
                                             CornerRadius="2" />
                                    <Label Text="Total Inventory"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="14" />
                                </HorizontalStackLayout>
                                <Label Grid.Column="1"
                                       Text="{Binding TotalInventory}"
                                       TextColor="{DynamicResource InfoColor}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                            </Grid>

                            <!-- Pending Orders -->
                            <Grid Grid.Row="1" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <HorizontalStackLayout Grid.Column="0" Spacing="8">
                                    <BoxView Color="{DynamicResource WarningColor}"
                                             WidthRequest="4"
                                             HeightRequest="20"
                                             VerticalOptions="Center"
                                             CornerRadius="2" />
                                    <Label Text="Pending Orders"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="14" />
                                </HorizontalStackLayout>
                                <Label Grid.Column="1"
                                       Text="{Binding PendingOrders}"
                                       TextColor="{DynamicResource WarningColor}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                            </Grid>

                            <!-- Stock Value -->
                            <Grid Grid.Row="2" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <Label Grid.Column="0"
                                       Text="Stock Value"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Grid.Column="1"
                                       Text="{Binding InventoryValue, StringFormat='${0:N0}'}"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="20"
                                       FontAttributes="Bold" />
                            </Grid>

                            <!-- Turnover Rate -->
                            <Grid Grid.Row="3" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <Label Grid.Column="0"
                                       Text="Turnover Rate"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       FontSize="13" />
                                <Label Grid.Column="1"
                                       Text="{Binding InventoryTurnover, StringFormat='{0:F1}x'}"
                                       TextColor="{Binding InventoryTurnoverColor}"
                                       FontSize="14"
                                       FontAttributes="Bold" />
                            </Grid>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Quick Actions -->
            <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="12"
                   HasShadow="True">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Quick Actions"
                           TextColor="{DynamicResource PrimaryTextColor}"
                           FontSize="18"
                           FontAttributes="Bold" />

                    <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="12">
                        <!-- Manage Products -->
                        <Frame Grid.Column="0"
                               BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="16"
                               CornerRadius="12">
                            <VerticalStackLayout Spacing="8">
                                <Button Text="ðŸ“¦"
                                        Command="{Binding ManageProductsCommand}"
                                        FontSize="24"
                                        BackgroundColor="Transparent"
                                        Padding="0"
                                        HorizontalOptions="Center" />
                                <Label Text="Manage Products"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="13"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ManageProductsCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>

                        <!-- Financial Reports -->
                        <Frame Grid.Column="1"
                               BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="16"
                               CornerRadius="12">
                            <VerticalStackLayout Spacing="8">
                                <Button Text="ðŸ“Š"
                                        Command="{Binding ViewReportsCommand}"
                                        FontSize="24"
                                        BackgroundColor="Transparent"
                                        Padding="0"
                                        HorizontalOptions="Center" />
                                <Label Text="Financial Reports"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="13"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ViewReportsCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>

                        <!-- Team Management -->
                        <Frame Grid.Column="2"
                               BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="16"
                               CornerRadius="12">
                            <VerticalStackLayout Spacing="8">
                                <Button Text="ðŸ‘¥"
                                        Command="{Binding ManageTeamCommand}"
                                        FontSize="24"
                                        BackgroundColor="Transparent"
                                        Padding="0"
                                        HorizontalOptions="Center" />
                                <Label Text="Team Management"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="13"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ManageTeamCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>

                        <!-- Strategy -->
                        <Frame Grid.Column="3"
                               BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="16"
                               CornerRadius="12">
                            <VerticalStackLayout Spacing="8">
                                <Button Text="ðŸŽ¯"
                                        Command="{Binding ViewStrategyCommand}"
                                        FontSize="24"
                                        BackgroundColor="Transparent"
                                        Padding="0"
                                        HorizontalOptions="Center" />
                                <Label Text="Strategy"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="13"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ViewStrategyCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>