<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Headquartz.PageModels"             
             xmlns:models="clr-namespace:Headquartz.Models"
             xmlns:controls="clr-namespace:Headquartz.Pages.Controls"
             xmlns:pullToRefresh="clr-namespace:Syncfusion.Maui.Toolkit.PullToRefresh;assembly=Syncfusion.Maui.Toolkit"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Headquartz.Pages.Dashboard.OverviewPage"
             x:DataType="pageModels:OverviewPageModel"
             Title="ERP Overview">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Page Header -->
            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Start">
                <VerticalStackLayout Grid.Column="0" Spacing="4">
                    <Label Text="ERP Simulation Dashboard" 
                           FontSize="24" 
                           TextColor="{DynamicResource PrimaryTextColor}"
                           FontAttributes="Bold" />
                    <Label Text="Real-time monitoring of all business operations" 
                           TextColor="{DynamicResource SecondaryTextColor}"
                           FontSize="14" />
                </VerticalStackLayout>

                <!-- Company Status Badge -->
                <Frame Grid.Column="1"
                       BackgroundColor="{DynamicResource SurfaceColor}"
                       Padding="12,8"
                       CornerRadius="12"
                       BorderColor="{DynamicResource BorderColor}"
                       HasShadow="True">
                    <HorizontalStackLayout Spacing="8">
                        <BoxView Color="{Binding CompanyStatusColor}"
                                 WidthRequest="10"
                                 HeightRequest="10"
                                 VerticalOptions="Center"
                                 CornerRadius="5" />
                        <Label Text="{Binding CompanyStatus}"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="12"
                               FontAttributes="Bold" />
                    </HorizontalStackLayout>
                </Frame>
            </Grid>

            <!-- Simulation Time & Controls Section -->
            <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="12"
                   BorderColor="{DynamicResource BorderColor}"
                   HasShadow="True">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="20">
                    <!-- Simulation Time -->
                    <VerticalStackLayout Grid.Column="0" Spacing="8">
                        <Label Text="Simulation Timeline" 
                               TextColor="{DynamicResource SecondaryTextColor}"
                               FontSize="14" />
                        <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                            <Label Grid.Column="0"
                                   Text="â±ï¸"
                                   FontSize="20"
                                   VerticalOptions="Center" />
                            <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="12,0">
                                <Label Text="{Binding SimTime}"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="28"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding SimulationPhase}"
                                       TextColor="{DynamicResource TertiaryTextColor}"
                                       FontSize="12" />
                            </VerticalStackLayout>
                            <Frame Grid.Column="2"
                                   BackgroundColor="{Binding SimulationStatusColor}"
                                   Padding="8,4"
                                   CornerRadius="8">
                                <Label Text="{Binding SimulationStatus}"
                                       TextColor="{DynamicResource PrimaryButtonTextColor}"
                                       FontSize="12"
                                       FontAttributes="Bold" />
                            </Frame>
                        </Grid>

                        <!-- Time Progress -->
                        <Grid Margin="0,12,0,0">
                            <ProgressBar Progress="{Binding TimeProgress}"
                                         ProgressColor="{DynamicResource PrimaryColor}"
                                         HeightRequest="6" />
                            <Label Text="{Binding TimeProgress, StringFormat='{0:P0} of quarter complete'}"
                                   HorizontalOptions="Center"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                                   Padding="10,2"
                                   FontSize="11" />
                        </Grid>
                    </VerticalStackLayout>

                    <!-- Control Buttons -->
                    <VerticalStackLayout Grid.Column="1" Spacing="10" HorizontalOptions="End">
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Button Grid.Column="0"
                                    Text="â–¶ Start"
                                    Command="{Binding StartSimulationCommand}"
                                    BackgroundColor="{DynamicResource PrimaryButtonBackground}"
                                    TextColor="{DynamicResource PrimaryButtonTextColor}"
                                    CornerRadius="8"
                                    Padding="20,12"
                                    FontSize="14"
                                    FontAttributes="Bold" />
                            <Button Grid.Column="1"
                                    Text="â¸ Pause"
                                    Command="{Binding StopSimulationCommand}"
                                    BackgroundColor="{DynamicResource WarningColor}"
                                    TextColor="White"
                                    CornerRadius="8"
                                    Padding="20,12"
                                    FontSize="14"
                                    FontAttributes="Bold" />
                        </Grid>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Button Grid.Column="0"
                                    Text="ðŸ’¾ Save"
                                    Command="{Binding SaveGameCommand}"
                                    BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                    TextColor="{DynamicResource SecondaryButtonTextColor}"
                                    CornerRadius="8"
                                    Padding="20,12"
                                    FontSize="14" />
                            <Button Grid.Column="1"
                                    Text="ðŸ“‚ Load"
                                    Command="{Binding LoadGameCommand}"
                                    BackgroundColor="{DynamicResource InfoColor}"
                                    TextColor="White"
                                    CornerRadius="8"
                                    Padding="20,12"
                                    FontSize="14" />
                        </Grid>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Key Performance Indicators -->
            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="16">
                <!-- Cash Flow -->
                <Frame Grid.Column="0"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="16"
                       CornerRadius="10"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Frame BackgroundColor="#E8F4FF"
                                   Padding="8"
                                   CornerRadius="8">
                                <Label Text="ðŸ’°"
                                       FontSize="16" />
                            </Frame>
                            <Label Text="Cash Flow"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <Label Text="{Binding Cash, StringFormat='${0:N0}'}"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="24"
                               FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Available funds"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   FontSize="12" />
                            <Label Grid.Column="1"
                                   Text="{Binding CashChange, StringFormat='{0:+$0;-$0;0}'}"
                                   TextColor="{Binding CashChangeColor}"
                                   FontSize="12"
                                   FontAttributes="Bold" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Market Demand -->
                <Frame Grid.Column="1"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="16"
                       CornerRadius="10"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Frame BackgroundColor="#E8F7FF"
                                   Padding="8"
                                   CornerRadius="8">
                                <Label Text="ðŸ“ˆ"
                                       FontSize="16" />
                            </Frame>
                            <Label Text="Market Demand"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <Label Text="{Binding CurrentDemand, StringFormat='{0:F0}'}"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="24"
                               FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Units demanded"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   FontSize="12" />
                            <Label Grid.Column="1"
                                   Text="{Binding DemandChange, StringFormat='{0:+0;-0;0}'}"
                                   TextColor="{Binding DemandChangeColor}"
                                   FontSize="12"
                                   FontAttributes="Bold" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Inventory -->
                <Frame Grid.Column="2"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="16"
                       CornerRadius="10"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Frame BackgroundColor="#F0F7FF"
                                   Padding="8"
                                   CornerRadius="8">
                                <Label Text="ðŸ“¦"
                                       FontSize="16" />
                            </Frame>
                            <Label Text="Inventory"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <Label Text="{Binding TotalStock}"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="24"
                               FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Units in stock"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   FontSize="12" />
                            <Label Grid.Column="1"
                                   Text="{Binding StockChange, StringFormat='{0:+0;-0;0}'}"
                                   TextColor="{Binding StockChangeColor}"
                                   FontSize="12"
                                   FontAttributes="Bold" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Efficiency -->
                <Frame Grid.Column="3"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="16"
                       CornerRadius="10"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Frame BackgroundColor="#F5F7FA"
                                   Padding="8"
                                   CornerRadius="8">
                                <Label Text="âš¡"
                                       FontSize="16" />
                            </Frame>
                            <Label Text="Efficiency"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <Label Text="{Binding Efficiency, StringFormat='{0:P0}'}"
                               TextColor="{Binding EfficiencyColor}"
                               FontSize="24"
                               FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Overall efficiency"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   FontSize="12" />
                            <ProgressBar Grid.Column="1"
                                         Progress="{Binding Efficiency}"
                                         ProgressColor="{Binding EfficiencyColor}"
                                         WidthRequest="60"
                                         VerticalOptions="Center" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Detailed Metrics Section -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                <!-- Financial Overview -->
                <Frame Grid.Column="0"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="20"
                       CornerRadius="12"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="16">
                        <!-- Header -->
                        <Grid>
                            <HorizontalStackLayout Spacing="12">
                                <Frame BackgroundColor="{DynamicResource BadgeBackgroundColor}"
                                       Padding="10"
                                       CornerRadius="10">
                                    <Label Text="ðŸ’µ"
                                           FontSize="20"
                                           TextColor="{DynamicResource BadgeTextColor}" />
                                </Frame>
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="Financial Overview"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="18"
                                           FontAttributes="Bold" />
                                    <Label Text="Q1 Performance"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <Button Text="Details â†’"
                                    Command="{Binding ViewFinancialDetailsCommand}"
                                    HorizontalOptions="End"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource TextButtonColor}"
                                    FontSize="12" />
                        </Grid>

                        <!-- Financial Metrics -->
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="12">
                            <!-- Revenue -->
                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <HorizontalStackLayout Grid.Column="0" Spacing="8">
                                    <BoxView Color="{DynamicResource SuccessColor}"
                                             WidthRequest="4"
                                             HeightRequest="20"
                                             VerticalOptions="Center"
                                             CornerRadius="2" />
                                    <Label Text="Revenue"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="14" />
                                </HorizontalStackLayout>
                                <Label Grid.Column="1"
                                       Text="{Binding Revenue, StringFormat='${0:N0}'}"
                                       TextColor="{DynamicResource SuccessColor}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                            </Grid>

                            <!-- Expenses -->
                            <Grid Grid.Row="1" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <HorizontalStackLayout Grid.Column="0" Spacing="8">
                                    <BoxView Color="{DynamicResource DangerColor}"
                                             WidthRequest="4"
                                             HeightRequest="20"
                                             VerticalOptions="Center"
                                             CornerRadius="2" />
                                    <Label Text="Expenses"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="14" />
                                </HorizontalStackLayout>
                                <Label Grid.Column="1"
                                       Text="{Binding Expenses, StringFormat='${0:N0}'}"
                                       TextColor="{DynamicResource DangerColor}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                            </Grid>

                            <!-- Divider -->
                            <BoxView Grid.Row="2" HeightRequest="1" Color="{DynamicResource DividerColor}" />

                            <!-- Net Profit -->
                            <Grid Grid.Row="3" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <Label Grid.Column="0"
                                       Text="Net Profit"
                                       TextColor="{DynamicResource PrimaryTextColor}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Grid.Column="1"
                                       Text="{Binding NetProfit, StringFormat='${0:N0}'}"
                                       TextColor="{Binding NetProfitColor}"
                                       FontSize="20"
                                       FontAttributes="Bold" />
                            </Grid>

                            <!-- Profit Margin -->
                            <Grid Grid.Row="4" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <Label Grid.Column="0"
                                       Text="Profit Margin"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       FontSize="13" />
                                <Label Grid.Column="1"
                                       Text="{Binding ProfitMargin, StringFormat='{0:P1}'}"
                                       TextColor="{Binding ProfitMarginColor}"
                                       FontSize="14"
                                       FontAttributes="Bold" />
                            </Grid>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Market & Operations -->
                <Frame Grid.Column="1"
                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                       Padding="20"
                       CornerRadius="12"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="16">
                        <!-- Header -->
                        <Grid>
                            <HorizontalStackLayout Spacing="12">
                                <Frame BackgroundColor="{DynamicResource BadgeBackgroundColor}"
                                       Padding="10"
                                       CornerRadius="10">
                                    <Label Text="ðŸŒ"
                                           FontSize="20"
                                           TextColor="{DynamicResource BadgeTextColor}" />
                                </Frame>
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="Market &amp; Operations"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="18"
                                           FontAttributes="Bold" />
                                    <Label Text="Current quarter analysis"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <Button Text="Details â†’"
                                    Command="{Binding ViewMarketDetailsCommand}"
                                    HorizontalOptions="End"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource TextButtonColor}"
                                    FontSize="12" />
                        </Grid>

                        <!-- Market Metrics -->
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="12">
                            <!-- Market Share -->
                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <HorizontalStackLayout Grid.Column="0" Spacing="8">
                                    <BoxView Color="{DynamicResource PrimaryColor}"
                                             WidthRequest="4"
                                             HeightRequest="20"
                                             VerticalOptions="Center"
                                             CornerRadius="2" />
                                    <Label Text="Market Share"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="14" />
                                </HorizontalStackLayout>
                                <Label Grid.Column="1"
                                       Text="{Binding MarketShare, StringFormat='{0:P1}'}"
                                       TextColor="{DynamicResource PrimaryColor}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                            </Grid>

                            <!-- Competitors -->
                            <Grid Grid.Row="1" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <HorizontalStackLayout Grid.Column="0" Spacing="8">
                                    <BoxView Color="{DynamicResource WarningColor}"
                                             WidthRequest="4"
                                             HeightRequest="20"
                                             VerticalOptions="Center"
                                             CornerRadius="2" />
                                    <Label Text="Active Competitors"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="14" />
                                </HorizontalStackLayout>
                                <Label Grid.Column="1"
                                       Text="{Binding CompetitorCount}"
                                       TextColor="{DynamicResource WarningColor}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                            </Grid>

                            <!-- Average Price -->
                            <Grid Grid.Row="2" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <HorizontalStackLayout Grid.Column="0" Spacing="8">
                                    <BoxView Color="{DynamicResource InfoColor}"
                                             WidthRequest="4"
                                             HeightRequest="20"
                                             VerticalOptions="Center"
                                             CornerRadius="2" />
                                    <Label Text="Average Price"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="14" />
                                </HorizontalStackLayout>
                                <Label Grid.Column="1"
                                       Text="{Binding AveragePrice, StringFormat='${0:F2}'}"
                                       TextColor="{DynamicResource InfoColor}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                            </Grid>

                            <!-- Divider -->
                            <BoxView Grid.Row="3" HeightRequest="1" Color="{DynamicResource DividerColor}" />

                            <!-- Department Status -->
                            <Grid Grid.Row="4" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <Label Grid.Column="0"
                                       Text="Department Status"
                                       TextColor="{DynamicResource SecondaryTextColor}"
                                       FontSize="13" />
                                <HorizontalStackLayout Grid.Column="1" Spacing="4">
                                    <BoxView Color="{Binding SalesStatusColor}"
                                             WidthRequest="8"
                                             HeightRequest="8"
                                             VerticalOptions="Center"
                                             CornerRadius="4" />
                                    <BoxView Color="{Binding ProductionStatusColor}"
                                             WidthRequest="8"
                                             HeightRequest="8"
                                             VerticalOptions="Center"
                                             CornerRadius="4" />
                                    <BoxView Color="{Binding LogisticsStatusColor}"
                                             WidthRequest="8"
                                             HeightRequest="8"
                                             VerticalOptions="Center"
                                             CornerRadius="4" />
                                    <BoxView Color="{Binding FinanceStatusColor}"
                                             WidthRequest="8"
                                             HeightRequest="8"
                                             VerticalOptions="Center"
                                             CornerRadius="4" />
                                </HorizontalStackLayout>
                            </Grid>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Quick Actions -->
            <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
       Padding="20"
       CornerRadius="12"
       HasShadow="True">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Quick Actions"
               TextColor="{DynamicResource PrimaryTextColor}"
               FontSize="18"
               FontAttributes="Bold" />

                    <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="12">
                        <!-- Adjust Prices -->
                        <Frame Grid.Column="0"
                   BackgroundColor="{DynamicResource SurfaceColor}"
                   Padding="16"
                   CornerRadius="12"
                   HasShadow="True">
                            <VerticalStackLayout Spacing="8">
                                <Button Text="ðŸ’°"
                            Command="{Binding AdjustPricesCommand}"
                            FontSize="24"
                            BackgroundColor="Transparent"
                            Padding="0"
                            HorizontalOptions="Center" />
                                <Label Text="Adjust Prices"
                           TextColor="{DynamicResource PrimaryTextColor}"
                           FontSize="13"
                           HorizontalOptions="Center" />
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AdjustPricesCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>

                        <!-- Order Materials -->
                        <Frame Grid.Column="1"
                   BackgroundColor="{DynamicResource SurfaceColor}"
                   Padding="16"
                   CornerRadius="12"
                   HasShadow="True">
                            <VerticalStackLayout Spacing="8">
                                <Button Text="ðŸ“¦"
                            Command="{Binding OrderMaterialsCommand}"
                            FontSize="24"
                            BackgroundColor="Transparent"
                            Padding="0"
                            HorizontalOptions="Center" />
                                <Label Text="Order Materials"
                           TextColor="{DynamicResource PrimaryTextColor}"
                           FontSize="13"
                           HorizontalOptions="Center" />
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OrderMaterialsCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>

                        <!-- Schedule Production -->
                        <Frame Grid.Column="2"
                   BackgroundColor="{DynamicResource SurfaceColor}"
                   Padding="16"
                   CornerRadius="12"
                   HasShadow="True">
                            <VerticalStackLayout Spacing="8">
                                <Button Text="âš™ï¸"
                            Command="{Binding ScheduleProductionCommand}"
                            FontSize="24"
                            BackgroundColor="Transparent"
                            Padding="0"
                            HorizontalOptions="Center" />
                                <Label Text="Schedule Production"
                           TextColor="{DynamicResource PrimaryTextColor}"
                           FontSize="13"
                           HorizontalOptions="Center" />
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ScheduleProductionCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>

                        <!-- View Reports -->
                        <Frame Grid.Column="3"
                   BackgroundColor="{DynamicResource SurfaceColor}"
                   Padding="16"
                   CornerRadius="12"
                   HasShadow="True">
                            <VerticalStackLayout Spacing="8">
                                <Button Text="ðŸ“Š"
                            Command="{Binding ViewReportsCommand}"
                            FontSize="24"
                            BackgroundColor="Transparent"
                            Padding="0"
                            HorizontalOptions="Center" />
                                <Label Text="View Reports"
                           TextColor="{DynamicResource PrimaryTextColor}"
                           FontSize="13"
                           HorizontalOptions="Center" />
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ViewReportsCommand}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>