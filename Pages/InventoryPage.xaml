<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.InventoryPage"
             Title="InventoryPage">
    
    <VerticalStackLayout Padding="20" Spacing="16">

        <Label Text="Inventory"
               FontSize="28"
               FontAttributes="Bold" />

        <!-- Product List -->
        <CollectionView ItemsSource="{Binding Products}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,8" Padding="12" BorderColor="#444">

                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontSize="20" />

                            <Label Text="Stock:"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding Quantity}"
                                   FontSize="18"
                                   TextColor="{Binding StockColor}" />

                            <Button Text="Restock +10"
                                    Command="{Binding BindingContext.RestockCommand, Source={x:Reference Name=PageRoot}}"
                                    CommandParameter="{Binding Name}"
                                    Margin="0,8,0,0" />
                        </VerticalStackLayout>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>