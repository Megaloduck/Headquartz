<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.Sales.SalesTargetsPage"
             Title="SalesTargetsPage">
    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Targets Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="20,15">
            <VerticalStackLayout Spacing="15">
                <HorizontalStackLayout>
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Sales Targets and Performance" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        <Label Text="Set targets, track progress, commission calculations" 
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                    </VerticalStackLayout>

                    <Border Background="{DynamicResource PrimaryColor}"
                            Padding="15,10"
                            StrokeShape="RoundRectangle 10"
                            Margin="20,0,0,0">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="ðŸŽ¯" FontSize="18"/>
                            <Label Text="{Binding OverallAchievement, StringFormat='{0:P0}'}" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </HorizontalStackLayout>
                    </Border>
                </HorizontalStackLayout>

                <!-- Target Period -->
                <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="15">
                    <Border Grid.Column="0" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                <Label Text="Target Period" 
                                       FontSize="12"
                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                <Picker ItemsSource="{Binding TargetPeriods}"
                                        SelectedItem="{Binding SelectedPeriod}"
                                        BackgroundColor="Transparent"
                                        TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="Team Target" 
                                       FontSize="12"
                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                <Label Text="{Binding TeamTarget, StringFormat='${0:N0}K'}" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>

                    <Button Grid.Column="1" 
                            Text="âž• Set Targets"
                            BackgroundColor="{DynamicResource SuccessColor}"
                            TextColor="White"
                            Padding="20,12"
                            CornerRadius="10"
                            Command="{Binding SetTargetsCommand}"/>

                    <Button Grid.Column="2" 
                            Text="ðŸ“Š Performance"
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            Padding="20,12"
                            CornerRadius="10"
                            Command="{Binding PerformanceReportCommand}"/>
                </Grid>
            </VerticalStackLayout>
        </Border>

        <!-- Targets Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Target Overview -->
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                    <!-- Revenue Target -->
                    <Border Grid.Column="0" Style="{StaticResource DashboardCardStyle}">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding RevenueTarget, StringFormat='${0:N0}K'}" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="Revenue Target" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <ProgressBar Progress="{Binding RevenueProgress}"
                                        ProgressColor="{DynamicResource SuccessColor}"
                                        HeightRequest="6"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Deals Target -->
                    <Border Grid.Column="1" Style="{StaticResource DashboardCardStyle}">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding DealsTarget}" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="Deals Target" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <ProgressBar Progress="{Binding DealsProgress}"
                                        ProgressColor="{DynamicResource PrimaryColor}"
                                        HeightRequest="6"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- New Customers -->
                    <Border Grid.Column="2" Style="{StaticResource DashboardCardStyle}">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding NewCustomersTarget}" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="New Customers" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <ProgressBar Progress="{Binding NewCustomersProgress}"
                                        ProgressColor="{DynamicResource AccentColor}"
                                        HeightRequest="6"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Team Achievement -->
                    <Border Grid.Column="3" Style="{StaticResource DashboardCardStyle}">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding TeamAchievement, StringFormat='{0:P0}'}" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="{Binding AchievementColor}"/>
                            <Label Text="Team Achievement" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Text="{Binding DaysRemaining, StringFormat='{0} days left'}" 
                                   FontSize="11"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Team Performance -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Team Performance" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>

                        <CollectionView ItemsSource="{Binding TeamPerformance}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="15" 
                                            Margin="0,0,0,10"
                                            Background="{DynamicResource HeaderBackgroundColor}"
                                            StrokeShape="RoundRectangle 8">
                                        <Grid ColumnDefinitions="Auto,*,100,100,100,100" ColumnSpacing="15">
                                            <!-- Sales Rep -->
                                            <HorizontalStackLayout Grid.Column="0" Spacing="10">
                                                <Border Background="{DynamicResource PrimaryColor}"
                                                        WidthRequest="40"
                                                        HeightRequest="40"
                                                        StrokeShape="RoundRectangle 20">
                                                    <Label Text="{Binding Initials}" 
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="White"
                                                           HorizontalOptions="Center"
                                                           VerticalOptions="Center"/>
                                                </Border>
                                                <VerticalStackLayout Spacing="2">
                                                    <Label Text="{Binding Name}" 
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                                    <Label Text="{Binding Region}" 
                                                           FontSize="11"
                                                           TextColor="{DynamicResource SecondaryTextColor}"/>
                                                </VerticalStackLayout>
                                            </HorizontalStackLayout>

                                            <!-- Target -->
                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="Target" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Label Text="{Binding Target, StringFormat='${0:N0}'}" 
                                                       FontSize="13"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <!-- Achieved -->
                                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                <Label Text="Achieved" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Label Text="{Binding Achieved, StringFormat='${0:N0}'}" 
                                                       FontSize="13"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource SuccessColor}"/>
                                            </VerticalStackLayout>

                                            <!-- Progress -->
                                            <VerticalStackLayout Grid.Column="3" Spacing="2">
                                                <Label Text="Progress" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <ProgressBar Progress="{Binding Progress}"
                                                            ProgressColor="{Binding ProgressColor}"
                                                            HeightRequest="6"/>
                                                <Label Text="{Binding Progress, StringFormat='{0:P0}'}" 
                                                       FontSize="11"
                                                       TextColor="{Binding ProgressColor}"/>
                                            </VerticalStackLayout>

                                            <!-- Commission -->
                                            <VerticalStackLayout Grid.Column="4" Spacing="2">
                                                <Label Text="Commission" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Label Text="{Binding Commission, StringFormat='${0:N0}'}" 
                                                       FontSize="13"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource AccentColor}"/>
                                            </VerticalStackLayout>

                                            <!-- Rank -->
                                            <Border Grid.Column="5" 
                                                    Background="{Binding RankColor}"
                                                    WidthRequest="30"
                                                    HeightRequest="30"
                                                    StrokeShape="RoundRectangle 15">
                                                <Label Text="{Binding Rank}" 
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!-- Target Setting -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Set New Targets" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="20" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="15">
                            <!-- Target Type -->
                            <VerticalStackLayout Grid.Column="0" Grid.Row="0" Spacing="5">
                                <Label Text="Target Type" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Picker ItemsSource="{Binding TargetTypes}"
                                        SelectedItem="{Binding SelectedTargetType}"
                                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                                        TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <!-- Period -->
                            <VerticalStackLayout Grid.Column="1" Grid.Row="0" Spacing="5">
                                <Label Text="Period" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Picker ItemsSource="{Binding TargetPeriodOptions}"
                                        SelectedItem="{Binding SelectedTargetPeriod}"
                                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                                        TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <!-- Target Value -->
                            <VerticalStackLayout Grid.Column="0" Grid.Row="1" Spacing="5">
                                <Label Text="Target Value" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Entry Text="{Binding TargetValue}"
                                       Placeholder="Enter target value"
                                       Keyboard="Numeric"
                                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <!-- Assign To -->
                            <VerticalStackLayout Grid.Column="1" Grid.Row="1" Spacing="5">
                                <Label Text="Assign To" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Picker ItemsSource="{Binding SalesReps}"
                                        SelectedItem="{Binding SelectedSalesRep}"
                                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                                        TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <!-- Commission Rate -->
                            <VerticalStackLayout Grid.Column="0" Grid.Row="2" Spacing="5">
                                <Label Text="Commission Rate (%)" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Entry Text="{Binding CommissionRate}"
                                       Placeholder="Enter commission rate"
                                       Keyboard="Numeric"
                                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <!-- Bonus -->
                            <VerticalStackLayout Grid.Column="1" Grid.Row="2" Spacing="5">
                                <Label Text="Bonus on Achievement" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Entry Text="{Binding BonusAmount}"
                                       Placeholder="Enter bonus amount"
                                       Keyboard="Numeric"
                                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <!-- Notes -->
                            <VerticalStackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Spacing="5">
                                <Label Text="Notes" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Editor Text="{Binding TargetNotes}"
                                        HeightRequest="80"
                                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                                        TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>
                        </Grid>

                        <Button Text="ðŸŽ¯ Set Target"
                                BackgroundColor="{DynamicResource PrimaryColor}"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"
                                FontSize="16"
                                Command="{Binding SetTargetCommand}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Commission Calculator -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Commission Calculator" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                            <!-- Calculator Inputs -->
                            <VerticalStackLayout Grid.Column="0" Spacing="15">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Sales Amount" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Entry Text="{Binding SalesAmount}"
                                           Placeholder="Enter sales amount"
                                           Keyboard="Numeric"
                                           BackgroundColor="{DynamicResource CardBackgroundColor}"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Commission Rate (%)" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Slider Minimum="0"
                                           Maximum="50"
                                           Value="{Binding CommissionRate}"
                                           MinimumTrackColor="{DynamicResource PrimaryColor}"
                                           MaximumTrackColor="{DynamicResource CardBackgroundColor}"/>
                                    <Label Text="{Binding CommissionRate, StringFormat='{0:F1}%'}" 
                                           FontSize="14"
                                           TextColor="{DynamicResource PrimaryColor}"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Bonus" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Entry Text="{Binding Bonus}"
                                           Placeholder="Enter bonus amount"
                                           Keyboard="Numeric"
                                           BackgroundColor="{DynamicResource CardBackgroundColor}"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                </VerticalStackLayout>
                            </VerticalStackLayout>

                            <!-- Calculator Results -->
                            <Border Grid.Column="1" 
                                    Background="{DynamicResource HeaderBackgroundColor}"
                                    Padding="20"
                                    StrokeShape="RoundRectangle 10">
                                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                                    <Label Text="Commission Calculation" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           HorizontalOptions="Center"/>

                                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" 
                                          ColumnSpacing="10" RowSpacing="8">
                                        <Label Grid.Column="0" Grid.Row="0" Text="Sales:" FontSize="13" TextColor="{DynamicResource TertiaryTextColor}"/>
                                        <Label Grid.Column="1" Grid.Row="0" Text="{Binding SalesAmount, StringFormat='${0:N0}'}" FontSize="13" TextColor="{DynamicResource PrimaryTextColor}"/>

                                        <Label Grid.Column="0" Grid.Row="1" Text="Commission:" FontSize="13" TextColor="{DynamicResource TertiaryTextColor}"/>
                                        <Label Grid.Column="1" Grid.Row="1" Text="{Binding CalculatedCommission, StringFormat='${0:N2}'}" FontSize="13" FontAttributes="Bold" TextColor="{DynamicResource SuccessColor}"/>

                                        <Label Grid.Column="0" Grid.Row="2" Text="Bonus:" FontSize="13" TextColor="{DynamicResource TertiaryTextColor}"/>
                                        <Label Grid.Column="1" Grid.Row="2" Text="{Binding Bonus, StringFormat='${0:N2}'}" FontSize="13" TextColor="{DynamicResource AccentColor}"/>

                                        <Label Grid.Column="0" Grid.Row="3" Text="Total:" FontSize="14" FontAttributes="Bold" TextColor="{DynamicResource PrimaryTextColor}"/>
                                        <Label Grid.Column="1" Grid.Row="3" Text="{Binding TotalPayout, StringFormat='${0:N2}'}" FontSize="14" FontAttributes="Bold" TextColor="{DynamicResource PrimaryColor}"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Targets Actions -->
        <Border Grid.Row="2" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="15">
            <Grid ColumnDefinitions="*,Auto">
                <HorizontalStackLayout Grid.Column="0" Spacing="15">
                    <Button Text="ðŸ“Š Performance Report" 
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            TextColor="{DynamicResource PrimaryTextColor}"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding PerformanceReportCommand}"/>

                    <Button Text="ðŸ’° Calculate Commissions" 
                            BackgroundColor="{DynamicResource WarningColor}"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding CalculateCommissionsCommand}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <Button Text="ðŸ“¥ Export Targets" 
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding ExportTargetsCommand}"/>

                    <Button Text="ðŸ‘ï¸ Share with Team" 
                            BackgroundColor="{DynamicResource SuccessColor}"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding ShareWithTeamCommand}"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

    </Grid>

</ContentPage>