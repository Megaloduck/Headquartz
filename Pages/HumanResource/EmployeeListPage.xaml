<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.HumanResource.EmployeeListPage"
             Title="EmployeeListPage">
    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header with Search -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="20,15">
            <VerticalStackLayout Spacing="15">
                <HorizontalStackLayout>
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Employee Directory" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        <Label Text="Staff directory and contact information" 
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                    </VerticalStackLayout>

                    <Border Background="{DynamicResource PrimaryColor}"
                            Padding="15,10"
                            StrokeShape="RoundRectangle 10"
                            HorizontalOptions="End">
                        <Label Text="{Binding TotalEmployees, StringFormat='{0} Employees'}" 
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"/>
                    </Border>
                </HorizontalStackLayout>

                <!-- Search and Filter -->
                <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                    <Border Grid.Column="0" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="ðŸ”" 
                                   FontSize="16"
                                   VerticalOptions="Center"/>
                            <Entry Placeholder="Search employees..." 
                                   Text="{Binding SearchText}"
                                   HorizontalOptions="FillAndExpand"
                                   PlaceholderColor="{DynamicResource TertiaryTextColor}"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Picker Grid.Column="1" 
                            Title="Filter Dept"
                            ItemsSource="{Binding Departments}"
                            SelectedItem="{Binding SelectedDepartment}"
                            WidthRequest="150"
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            TextColor="{DynamicResource PrimaryTextColor}"/>

                    <Button Grid.Column="2" 
                            Text="âž• Add Employee"
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            Padding="20,12"
                            CornerRadius="10"
                            Command="{Binding AddEmployeeCommand}"/>
                </Grid>
            </VerticalStackLayout>
        </Border>

        <!-- Employee List -->
        <CollectionView Grid.Row="1" 
                       ItemsSource="{Binding Employees}"
                       SelectionMode="Single"
                       SelectedItem="{Binding SelectedEmployee}">

            <CollectionView.Header>
                <Grid ColumnDefinitions="40,*,100,120,120,100,80" 
                      Padding="15,10"
                      BackgroundColor="{DynamicResource HeaderBackgroundColor}">
                    <Label Grid.Column="0" Text="ID" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                    <Label Grid.Column="1" Text="Name" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                    <Label Grid.Column="2" Text="Department" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                    <Label Grid.Column="3" Text="Position" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                    <Label Grid.Column="4" Text="Hire Date" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                    <Label Grid.Column="5" Text="Salary" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                    <Label Grid.Column="6" Text="Status" FontSize="12" FontAttributes="Bold" TextColor="{DynamicResource TertiaryTextColor}"/>
                </Grid>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="15,12" 
                            Margin="0,0,0,1"
                            Background="{DynamicResource CardBackgroundColor}">

                        <Grid ColumnDefinitions="40,*,100,120,120,100,80" ColumnSpacing="10">

                            <!-- Employee ID -->
                            <Border Grid.Column="0" 
                                    Background="{DynamicResource PrimaryColor}"
                                    Padding="5"
                                    StrokeShape="RoundRectangle 6">
                                <Label Text="{Binding EmployeeId}" 
                                       FontSize="11"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryColor}"
                                       HorizontalOptions="Center"/>
                            </Border>

                            <!-- Name with Avatar -->
                            <HorizontalStackLayout Grid.Column="1" Spacing="10">
                                <Border Background="{DynamicResource PrimaryColor}"
                                        WidthRequest="36"
                                        HeightRequest="36"
                                        StrokeShape="RoundRectangle 18">
                                    <Label Text="{Binding Initials}" 
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding FullName}" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Label Text="{Binding Email}" 
                                           FontSize="11"
                                           TextColor="{DynamicResource SecondaryTextColor}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <!-- Department -->
                            <Border Grid.Column="2" 
                                    Background="{Binding DepartmentColor}"
                                    Padding="8,4"
                                    StrokeShape="RoundRectangle 6">
                                <Label Text="{Binding Department}" 
                                       FontSize="11"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"/>
                            </Border>

                            <!-- Position -->
                            <Label Grid.Column="3" 
                                   Text="{Binding Position}"
                                   FontSize="13"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   VerticalOptions="Center"/>

                            <!-- Hire Date -->
                            <Label Grid.Column="4" 
                                   Text="{Binding HireDate, StringFormat='{0:yyyy-MM-dd}'}"
                                   FontSize="12"
                                   TextColor="{DynamicResource SecondaryTextColor}"
                                   VerticalOptions="Center"/>

                            <!-- Salary -->
                            <Label Grid.Column="5" 
                                   Text="{Binding Salary, StringFormat='${0:N0}'}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource SuccessColor}"
                                   VerticalOptions="Center"/>

                            <!-- Status -->
                            <Border Grid.Column="6" 
                                    Background="{Binding StatusColor}"
                                    Padding="8,4"
                                    StrokeShape="RoundRectangle 6">
                                <Label Text="{Binding Status}" 
                                       FontSize="11"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"/>
                            </Border>

                        </Grid>

                        <!-- Tap Gesture -->
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewEmployeeCommand}"
                                                CommandParameter="{Binding .}"/>
                        </Border.GestureRecognizers>

                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Pagination -->
        <Border Grid.Row="2" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="15">
            <Grid ColumnDefinitions="*,Auto,*">
                <Label Grid.Column="0" 
                       Text="{Binding ShowingRange, StringFormat='Showing {0}'}"
                       FontSize="12"
                       TextColor="{DynamicResource SecondaryTextColor}"
                       VerticalOptions="Center"/>

                <HorizontalStackLayout Grid.Column="1" Spacing="5" HorizontalOptions="Center">
                    <Button Text="â—€" 
                            BackgroundColor="Transparent"
                            TextColor="{DynamicResource PrimaryColor}"
                            IsEnabled="{Binding HasPreviousPage}"
                            Command="{Binding PreviousPageCommand}"
                            WidthRequest="40"/>

                    <Label Text="{Binding CurrentPage, StringFormat='Page {0}'}" 
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource PrimaryTextColor}"
                           VerticalOptions="Center"
                           Margin="10,0"/>

                    <Button Text="â–¶" 
                            BackgroundColor="Transparent"
                            TextColor="{DynamicResource PrimaryColor}"
                            IsEnabled="{Binding HasNextPage}"
                            Command="{Binding NextPageCommand}"
                            WidthRequest="40"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="2" Spacing="10" HorizontalOptions="End">
                    <Picker Title="Per Page"
                            ItemsSource="{Binding PageSizes}"
                            SelectedItem="{Binding PageSize}"
                            WidthRequest="100"
                            BackgroundColor="{DynamicResource CardBackgroundColor}"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

    </Grid>

</ContentPage>