<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.HumanResource.RecruitmentPage"
             Title="RecruitmentPage">
    
    <Grid RowDefinitions="Auto, *, Auto" Padding="20" RowSpacing="20">

        <Label Grid.Row="0" Text="Initiate New Hiring Round" FontSize="28" FontAttributes="Bold" TextColor="{StaticResource Primary}" />

        <Border Grid.Row="1" StrokeShape="RoundRectangle 10" Padding="20" >
            <ScrollView>
                <VerticalStackLayout Spacing="15">

                    <Label Text="Role to Recruit:" FontSize="16" FontAttributes="Bold" />
                    <Picker x:Name="RolePicker" Title="Select Department Role">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Warehouse Staff</x:String>
                                <x:String>Production Operator</x:String>
                                <x:String>Sales Agent</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <Label Text="Number of Positions:" FontSize="16" FontAttributes="Bold" />
                    <Entry Placeholder="Enter number of staff (1-10)" 
                           x:Name="NumHiresEntry"
                           Keyboard="Numeric"
                           Text="{Binding NumHires}" />

                    <Label Text="Base Salary Offer (Per Period):" FontSize="16" FontAttributes="Bold" />
                    <Entry Placeholder="e.g., 25000" 
                           x:Name="SalaryEntry"
                           Keyboard="Numeric"
                           Text="{Binding BaseSalaryOffer}" />

                    <Label Text="Recruitment Lead Time (Simulated):" FontSize="16" FontAttributes="Bold" />
                    <Label Text="3 Weeks (Est. Cost: $5,000)" TextColor="{StaticResource Secondary}" />

                    <BoxView HeightRequest="1" Color="{StaticResource LightGray}" Margin="0,10,0,10" />
                    <Label Text="Total Estimated Payroll Increase (Next Period):" FontSize="18" FontAttributes="Bold" />
                    <Label Text="{Binding EstimatedTotalPayroll, StringFormat='{0:C0}'}" FontSize="24" TextColor="DarkOrange" />

                </VerticalStackLayout>
            </ScrollView>
        </Border>

        <Button Grid.Row="2" Text="Confirm and Start Recruitment" 
          
                Style="{StaticResource PrimaryAction}"
                Margin="0,10,0,0"/>

    </Grid>
</ContentPage>