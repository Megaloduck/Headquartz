<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.HumanResource.RecruitmentPage"
             Title="RecruitmentPage">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Recruitment Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="20,15">
            <VerticalStackLayout Spacing="15">
                <HorizontalStackLayout>
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Recruitment Center" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        <Label Text="Hiring, applicants, and interview management" 
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                    </VerticalStackLayout>

                    <Border Background="{DynamicResource WarningColor}"
                            Padding="15,10"
                            StrokeShape="RoundRectangle 10"
                            Margin="20,0,0,0">
                        <Label Text="{Binding OpenPositions, StringFormat='{0} Open Positions'}" 
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"/>
                    </Border>
                </HorizontalStackLayout>

                <!-- Tabs -->
                <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Start" AlignItems="Center">
                    <Button Text="ðŸ“‹ Job Postings ({Binding JobPostingsCount})" 
                            BackgroundColor="{Binding IsJobsTabActive, Converter={StaticResource TabActiveConverter}}"
                            TextColor="{Binding IsJobsTabActive, Converter={StaticResource TabTextColorConverter}}"
                            CornerRadius="20"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            Command="{Binding SwitchToJobsCommand}"/>

                    <Button Text="ðŸ‘¥ Applicants ({Binding ApplicantsCount})" 
                            BackgroundColor="{Binding IsApplicantsTabActive, Converter={StaticResource TabActiveConverter}}"
                            TextColor="{Binding IsApplicantsTabActive, Converter={StaticResource TabTextColorConverter}}"
                            CornerRadius="20"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            Command="{Binding SwitchToApplicantsCommand}"/>

                    <Button Text="ðŸ“… Interviews ({Binding InterviewsCount})" 
                            BackgroundColor="{Binding IsInterviewsTabActive, Converter={StaticResource TabActiveConverter}}"
                            TextColor="{Binding IsInterviewsTabActive, Converter={StaticResource TabTextColorConverter}}"
                            CornerRadius="20"
                            Padding="20,10"
                            Command="{Binding SwitchToInterviewsCommand}"/>
                </FlexLayout>
            </VerticalStackLayout>
        </Border>

        <!-- Content Area - Job Postings -->
        <ScrollView Grid.Row="1" Padding="20" IsVisible="{Binding ShowJobs}">
            <VerticalStackLayout Spacing="20">

                <!-- Create New Job Button -->
                <Border Background="{DynamicResource PrimaryColor}"
                        Padding="20,15"
                        StrokeShape="RoundRectangle 10">
                    <HorizontalStackLayout Spacing="15">
                        <Border Background="White"
                                WidthRequest="50"
                                HeightRequest="50"
                                StrokeShape="RoundRectangle 25">
                            <Label Text="âž•" 
                                   FontSize="24"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <VerticalStackLayout Spacing="2">
                            <Label Text="Create New Job Posting" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                            <Label Text="Post a new position to attract talent" 
                                   FontSize="13"
                                   TextColor="#FFFFFFAA"/>
                        </VerticalStackLayout>

                        <Button Text="Create Now â†’" 
                                BackgroundColor="White"
                                TextColor="{DynamicResource PrimaryColor}"
                                CornerRadius="8"
                                Padding="20,10"
                                HorizontalOptions="End"
                                Command="{Binding CreateJobPostingCommand}"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Active Job Postings -->
                <Label Text="Active Job Postings" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="{DynamicResource PrimaryTextColor}"/>

                <CollectionView ItemsSource="{Binding JobPostings}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"
                                        Span="2"
                                        HorizontalItemSpacing="15"
                                        VerticalItemSpacing="15"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBackgroundColor}"
                                    Padding="20"
                                    StrokeShape="RoundRectangle 10">

                                <VerticalStackLayout Spacing="15">
                                    <!-- Job Header -->
                                    <HorizontalStackLayout>
                                        <VerticalStackLayout Spacing="2">
                                            <Label Text="{Binding Title}" 
                                                   FontSize="18" 
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                                            <Label Text="{Binding Department}" 
                                                   FontSize="13"
                                                   TextColor="{DynamicResource SecondaryTextColor}"/>
                                        </VerticalStackLayout>

                                        <Border Background="{Binding StatusColor}"
                                                Padding="10,5"
                                                StrokeShape="RoundRectangle 5"
                                                HorizontalOptions="End">
                                            <Label Text="{Binding Status}" 
                                                   FontSize="11"
                                                   FontAttributes="Bold"
                                                   TextColor="White"/>
                                        </Border>
                                    </HorizontalStackLayout>

                                    <!-- Job Details -->
                                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" 
                                          ColumnSpacing="15" RowSpacing="10">

                                        <HorizontalStackLayout Grid.Column="0" Grid.Row="0" Spacing="5">
                                            <Label Text="ðŸ“" FontSize="12"/>
                                            <Label Text="{Binding Location}" 
                                                   FontSize="12"
                                                   TextColor="{DynamicResource SecondaryTextColor}"/>
                                        </HorizontalStackLayout>

                                        <HorizontalStackLayout Grid.Column="1" Grid.Row="0" Spacing="5">
                                            <Label Text="ðŸ’°" FontSize="12"/>
                                            <Label Text="{Binding SalaryRange}" 
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource SuccessColor}"/>
                                        </HorizontalStackLayout>

                                        <HorizontalStackLayout Grid.Column="0" Grid.Row="1" Spacing="5">
                                            <Label Text="ðŸ“…" FontSize="12"/>
                                            <Label Text="{Binding PostedDate, StringFormat='Posted: {0:MMM dd}'}" 
                                                   FontSize="12"
                                                   TextColor="{DynamicResource SecondaryTextColor}"/>
                                        </HorizontalStackLayout>

                                        <HorizontalStackLayout Grid.Column="1" Grid.Row="1" Spacing="5">
                                            <Label Text="ðŸ‘¥" FontSize="12"/>
                                            <Label Text="{Binding ApplicantCount, StringFormat='{0} applicants'}" 
                                                   FontSize="12"
                                                   TextColor="{DynamicResource PrimaryColor}"/>
                                        </HorizontalStackLayout>
                                    </Grid>

                                    <!-- Progress Bar -->
                                    <VerticalStackLayout Spacing="5">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Grid.Column="0" 
                                                   Text="Hiring Progress" 
                                                   FontSize="12"
                                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                                            <Label Grid.Column="1" 
                                                   Text="{Binding Progress, StringFormat='{0:P0}'}" 
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource PrimaryColor}"/>
                                        </Grid>
                                        <ProgressBar Progress="{Binding Progress}"
                                                    ProgressColor="{DynamicResource PrimaryColor}"
                                                    HeightRequest="6"/>
                                    </VerticalStackLayout>

                                    <!-- Action Buttons -->
                                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                        <Button Grid.Column="0" 
                                                Text="View Applicants"
                                                BackgroundColor="{DynamicResource CardBackgroundColor}"
                                                TextColor="{DynamicResource PrimaryTextColor}"
                                                CornerRadius="8"
                                                HeightRequest="40"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewApplicantsCommand}"
                                                CommandParameter="{Binding Id}"/>

                                        <Button Grid.Column="1" 
                                                Text="Edit Posting"
                                                BackgroundColor="{DynamicResource PrimaryColor}"
                                                TextColor="White"
                                                CornerRadius="8"
                                                HeightRequest="40"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditJobCommand}"
                                                CommandParameter="{Binding Id}"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer Actions -->
        <Border Grid.Row="2" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="15">
            <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                <Button Text="ðŸ“Š Analytics Report" 
                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                        TextColor="{DynamicResource PrimaryTextColor}"
                        Padding="15,10"
                        CornerRadius="8"
                        Command="{Binding ViewAnalyticsCommand}"/>

                <Button Text="ðŸ“¤ Export Data" 
                        BackgroundColor="{DynamicResource PrimaryColor}"
                        TextColor="White"
                        Padding="15,10"
                        CornerRadius="8"
                        Command="{Binding ExportDataCommand}"/>
            </HorizontalStackLayout>
        </Border>

    </Grid>

</ContentPage>