<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.HumanResource.TrainingPage"
             Title="TrainingPage">
    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Training Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="20,15">
            <VerticalStackLayout Spacing="15">
                <HorizontalStackLayout>
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Training and Development" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        <Label Text="Employee development and learning programs" 
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                    </VerticalStackLayout>

                    <Border Background="{DynamicResource PrimaryColor}"
                            Padding="15,10"
                            StrokeShape="RoundRectangle 10"
                            Margin="20,0,0,0">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="ðŸ“š" FontSize="18"/>
                            <Label Text="{Binding ActiveCourses}" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </HorizontalStackLayout>
                    </Border>
                </HorizontalStackLayout>

                <!-- Training Stats -->
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                    <!-- Total Trained -->
                    <Border Grid.Column="0" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <HorizontalStackLayout Spacing="10">
                            <Border Background="{DynamicResource SuccessColor}"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="ðŸ‘¨â€ðŸŽ“" 
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding EmployeesTrained}" 
                                       FontSize="20" 
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Label Text="Trained" 
                                       FontSize="12"
                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Avg Rating -->
                    <Border Grid.Column="1" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <HorizontalStackLayout Spacing="10">
                            <Border Background="{DynamicResource AccentColor}"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="â­" 
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding AverageRating, StringFormat='{0:F1}'}" 
                                       FontSize="20" 
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Label Text="Avg Rating" 
                                       FontSize="12"
                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Training Hours -->
                    <Border Grid.Column="2" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <HorizontalStackLayout Spacing="10">
                            <Border Background="{DynamicResource InfoColor}"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="â±ï¸" 
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding TotalHours}" 
                                       FontSize="20" 
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Label Text="Hours" 
                                       FontSize="12"
                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Budget Used -->
                    <Border Grid.Column="3" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <HorizontalStackLayout Spacing="10">
                            <Border Background="{DynamicResource WarningColor}"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="ðŸ’°" 
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding BudgetUsed, StringFormat='{0:P0}'}" 
                                       FontSize="20" 
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Label Text="Budget Used" 
                                       FontSize="12"
                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>
        </Border>

        <!-- Training Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Create New Course -->
                <Border Background="{DynamicResource PrimaryColor}"
                        Padding="20,15"
                        StrokeShape="RoundRectangle 10">
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <Label Text="âž• Create New Training Program" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryColor}"/>
                            <Label Text="Develop new skills for your team" 
                                   FontSize="13"
                                   TextColor="{DynamicResource SecondaryTextColor}"/>
                        </VerticalStackLayout>

                        <Button Grid.Column="1" 
                                Text="Create Course"
                                BackgroundColor="{DynamicResource PrimaryColor}"
                                TextColor="White"
                                Padding="20,10"
                                CornerRadius="8"
                                Command="{Binding CreateCourseCommand}"/>
                    </Grid>
                </Border>

                <!-- Active Courses -->
                <Label Text="Active Training Programs" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="{DynamicResource PrimaryTextColor}"/>

                <CollectionView ItemsSource="{Binding ActiveCourses}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CardBackgroundColor}"
                                    Padding="20"
                                    StrokeShape="RoundRectangle 10"
                                    Margin="0,0,0,15">

                                <VerticalStackLayout Spacing="15">
                                    <!-- Course Header -->
                                    <Grid ColumnDefinitions="*,Auto">
                                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                                            <Label Text="{Binding Title}" 
                                                   FontSize="18" 
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                                            <Label Text="{Binding Category}" 
                                                   FontSize="13"
                                                   TextColor="{DynamicResource SecondaryTextColor}"/>
                                        </VerticalStackLayout>

                                        <Border Grid.Column="1" 
                                                Background="{Binding StatusColor}"
                                                Padding="10,5"
                                                StrokeShape="RoundRectangle 5">
                                            <Label Text="{Binding Status}" 
                                                   FontSize="11"
                                                   FontAttributes="Bold"
                                                   TextColor="White"/>
                                        </Border>
                                    </Grid>

                                    <!-- Course Details -->
                                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                                        <VerticalStackLayout Grid.Column="0" Spacing="2">
                                            <Label Text="ðŸ‘¥ Participants" 
                                                   FontSize="12"
                                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                                            <Label Text="{Binding ParticipantCount}" 
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                                        </VerticalStackLayout>

                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                            <Label Text="â­ Rating" 
                                                   FontSize="12"
                                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                                            <Label Text="{Binding Rating, StringFormat='{0:F1}'}" 
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource AccentColor}"/>
                                        </VerticalStackLayout>

                                        <VerticalStackLayout Grid.Column="2" Spacing="2">
                                            <Label Text="ðŸ“… End Date" 
                                                   FontSize="12"
                                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                                            <Label Text="{Binding EndDate, StringFormat='{0:MMM dd}'}" 
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                                        </VerticalStackLayout>
                                    </Grid>

                                    <!-- Progress -->
                                    <VerticalStackLayout Spacing="5">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Grid.Column="0" 
                                                   Text="Completion Progress" 
                                                   FontSize="12"
                                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                                            <Label Grid.Column="1" 
                                                   Text="{Binding CompletionRate, StringFormat='{0:P0}'}" 
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource PrimaryColor}"/>
                                        </Grid>
                                        <ProgressBar Progress="{Binding CompletionRate}"
                                                    ProgressColor="{DynamicResource PrimaryColor}"
                                                    HeightRequest="6"/>
                                    </VerticalStackLayout>

                                    <!-- Action Buttons -->
                                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                        <Button Grid.Column="0" 
                                                Text="View Details"
                                                BackgroundColor="{DynamicResource CardBackgroundColor}"
                                                TextColor="{DynamicResource PrimaryTextColor}"
                                                CornerRadius="8"
                                                HeightRequest="40"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewCourseCommand}"
                                                CommandParameter="{Binding Id}"/>

                                        <Button Grid.Column="1" 
                                                Text="Manage Participants"
                                                BackgroundColor="{DynamicResource PrimaryColor}"
                                                TextColor="White"
                                                CornerRadius="8"
                                                HeightRequest="40"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ManageParticipantsCommand}"
                                                CommandParameter="{Binding Id}"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Training Categories -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Training Categories" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>

                        <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Start" AlignItems="Center" BindableLayout.ItemsSource="{Binding Categories}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Color}"
                                            Padding="15,10"
                                            Margin="0,0,10,10"
                                            StrokeShape="RoundRectangle 8">
                                        <VerticalStackLayout Spacing="2">
                                            <Label Text="{Binding Icon}" 
                                                   FontSize="20"
                                                   HorizontalOptions="Center"/>
                                            <Label Text="{Binding Name}" 
                                                   FontSize="13"
                                                   FontAttributes="Bold"
                                                   TextColor="White"
                                                   HorizontalOptions="Center"/>
                                            <Label Text="{Binding CourseCount, StringFormat='{0} courses'}" 
                                                   FontSize="11"
                                                   TextColor="#FFFFFFAA"
                                                   HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Training Actions -->
        <Border Grid.Row="2" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="15">
            <Grid ColumnDefinitions="*,Auto">
                <HorizontalStackLayout Grid.Column="0" Spacing="15">
                    <Button Text="ðŸ“‹ Training Calendar" 
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            TextColor="{DynamicResource PrimaryTextColor}"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding ViewCalendarCommand}"/>

                    <Button Text="ðŸ“Š Skill Matrix" 
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            TextColor="{DynamicResource PrimaryTextColor}"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding ViewSkillMatrixCommand}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <Button Text="ðŸ“¥ Export Reports" 
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding ExportReportsCommand}"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

    </Grid>

</ContentPage>