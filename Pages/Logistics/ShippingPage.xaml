<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.Logistics.ShippingPage"
             Title="ShippingPage">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="{DynamicResource HeaderBackgroundColor}"
               Padding="20"
               CornerRadius="0">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="Shipping Management" 
                           FontSize="24" 
                           TextColor="{DynamicResource PrimaryTextColor}"
                           FontAttributes="Bold"/>
                    <Label Text="Shipping rates, carrier selection, label generation, customs documentation"
                           TextColor="{DynamicResource SecondaryTextColor}"/>
                </VerticalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <Button Text="+ New Shipment"
                            Command="{Binding CreateShipmentCommand}"
                            BackgroundColor="{DynamicResource PrimaryButtonBackground}"
                            TextColor="{DynamicResource PrimaryButtonTextColor}"
                            Padding="20,12"/>
                    <Button Text="Bulk Ship"
                            Command="{Binding BulkShipCommand}"
                            BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                            TextColor="{DynamicResource SecondaryButtonTextColor}"
                            Padding="15,10"/>
                </HorizontalStackLayout>
            </Grid>
        </Frame>

        <!-- Main Content -->
        <Grid Grid.Row="1" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Shipping Tools -->
            <Frame Grid.Column="0"
                   BackgroundColor="{DynamicResource SidebarBackgroundColor}"
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="20">
                    <!-- Rate Calculator -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Rate Calculator"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="16"
                               FontAttributes="Bold"/>

                        <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="15"
                               CornerRadius="8">
                            <VerticalStackLayout Spacing="10">
                                <Entry Placeholder="Weight (kg)"
                                       Text="{Binding Weight}"
                                       Keyboard="Numeric"
                                       BackgroundColor="{DynamicResource InputBackgroundColor}"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Entry Placeholder="Dimensions (LxWxH)"
                                       Text="{Binding Dimensions}"
                                       BackgroundColor="{DynamicResource InputBackgroundColor}"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Entry Placeholder="Destination"
                                       Text="{Binding Destination}"
                                       BackgroundColor="{DynamicResource InputBackgroundColor}"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Button Text="Calculate Rate"
                                        Command="{Binding CalculateRateCommand}"
                                        BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                        TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Carrier Selection -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Available Carriers"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"/>

                        <CollectionView ItemsSource="{Binding AvailableCarriers}"
                                        SelectionMode="Single"
                                        SelectedItem="{Binding SelectedCarrier}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                                           Padding="10"
                                           CornerRadius="6"
                                           Margin="0,0,0,5">
                                        <Grid ColumnDefinitions="Auto,*" Padding="5">
                                            <BoxView Grid.Column="0"
                                                     Color="{Binding StatusColor}"
                                                     WidthRequest="8"
                                                     HeightRequest="8"
                                                     VerticalOptions="Center"
                                                     CornerRadius="4"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding CarrierName}"
                                                   TextColor="{DynamicResource PrimaryTextColor}"
                                                   FontSize="12"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!-- Quick Actions -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Quick Actions"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"
                               FontAttributes="Bold"/>

                        <Button Text="Print Labels"
                                Command="{Binding PrintLabelsCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Customs Forms"
                                Command="{Binding GenerateCustomsFormsCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Schedule Pickup"
                                Command="{Binding SchedulePickupCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                    </VerticalStackLayout>

                    <!-- Shipping Stats -->
                    <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                           Padding="15"
                           CornerRadius="8">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Today's Shipping"
                                   TextColor="{DynamicResource PrimaryTextColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"/>

                            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="Shipments:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding TodaysShipments}"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="12"/>
                                </Grid>

                                <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="Packages:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding TodaysPackages}"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="12"/>
                                </Grid>

                                <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="Total Weight:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding TotalWeight, StringFormat='{0} kg'}"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="12"/>
                                </Grid>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- Shipments List -->
            <Frame Grid.Column="1"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="10"
                   Margin="20,0,0,0">
                <Grid RowDefinitions="Auto,*">
                    <!-- List Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <HorizontalStackLayout Spacing="10">
                            <SearchBar Text="{Binding SearchText}"
                                       Placeholder="Search shipments..."
                                       WidthRequest="200"
                                       BackgroundColor="{DynamicResource InputBackgroundColor}"
                                       CancelButtonColor="{DynamicResource PrimaryColor}"/>
                            <Picker Title="Status"
                                    ItemsSource="{Binding StatusFilters}"
                                    SelectedItem="{Binding SelectedStatus}"
                                    WidthRequest="150"/>
                            <Picker Title="Carrier"
                                    ItemsSource="{Binding CarrierFilters}"
                                    SelectedItem="{Binding SelectedCarrierFilter}"
                                    WidthRequest="150"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                            <Button Text="Refresh"
                                    Command="{Binding RefreshCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource TextButtonColor}"/>
                            <Button Text="Export"
                                    Command="{Binding ExportShipmentsCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource TextButtonColor}"/>
                        </HorizontalStackLayout>
                    </Grid>

                    <!-- Shipments Collection -->
                    <CollectionView Grid.Row="1" 
                                    ItemsSource="{Binding FilteredShipments}"
                                    SelectionMode="Single"
                                    SelectedItem="{Binding SelectedShipment}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical"
                                             Span="1"
                                             VerticalItemSpacing="15"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                                       Padding="20"
                                       CornerRadius="10">
                                    <Grid ColumnDefinitions="Auto,*,Auto" 
                                          RowDefinitions="Auto,Auto,Auto"
                                          ColumnSpacing="15"
                                          RowSpacing="10">
                                        <!-- Shipment Icon -->
                                        <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                               BackgroundColor="{DynamicResource BadgeBackgroundColor}"
                                               Padding="10"
                                               CornerRadius="8"
                                               WidthRequest="60"
                                               HeightRequest="60">
                                            <Label Text="{Binding ShipmentTypeIcon}"
                                                   FontSize="24"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   TextColor="{DynamicResource BadgeTextColor}"/>
                                        </Frame>

                                        <!-- Shipment Details -->
                                        <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                                            <Label Text="{Binding TrackingNumber}"
                                                   TextColor="{DynamicResource PrimaryTextColor}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding Description}"
                                                   TextColor="{DynamicResource SecondaryTextColor}"
                                                   FontSize="12"
                                                   LineBreakMode="WordWrap"/>
                                        </VerticalStackLayout>

                                        <!-- Status & Priority -->
                                        <Grid Grid.Row="0" Grid.Column="2"
                                              RowDefinitions="Auto,Auto"
                                              RowSpacing="5">
                                            <!-- Status -->
                                            <Frame Grid.Row="0"
                                                   BackgroundColor="{Binding StatusColor}"
                                                   Padding="5,2"
                                                   CornerRadius="4">
                                                <Label Text="{Binding Status}"
                                                       TextColor="{DynamicResource PrimaryButtonTextColor}"
                                                       FontSize="11"/>
                                            </Frame>

                                            <!-- Priority -->
                                            <HorizontalStackLayout Grid.Row="1"
                                                                   Spacing="5"
                                                                   HorizontalOptions="End">
                                                <BoxView Color="{Binding PriorityColor}"
                                                         WidthRequest="8"
                                                         HeightRequest="8"
                                                         VerticalOptions="Center"
                                                         CornerRadius="4"/>
                                                <Label Text="{Binding Priority}"
                                                       TextColor="{Binding PriorityColor}"
                                                       FontSize="12"/>
                                            </HorizontalStackLayout>
                                        </Grid>

                                        <!-- Shipping Details -->
                                        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                              ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                <Label Text="Carrier"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding Carrier}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="Destination"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding Destination}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                <Label Text="Weight"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding Weight, StringFormat='{0} kg'}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="3" Spacing="2">
                                                <Label Text="Cost"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding Cost, StringFormat='${0:F2}'}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>
                                        </Grid>

                                        <!-- Actions -->
                                        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                                            <!-- Timeline -->
                                            <ProgressBar Progress="{Binding Progress}"
                                                         ProgressColor="{DynamicResource PrimaryColor}"/>
                                            <Label Text="{Binding Progress, StringFormat='{0:P0}'}"
                                                   HorizontalOptions="Center"
                                                   TextColor="{DynamicResource PrimaryTextColor}"
                                                   BackgroundColor="{DynamicResource SurfaceColor}"
                                                   Padding="10,0"/>

                                            <!-- Action Buttons -->
                                            <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                                                <Button Text="Track"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, 
                                                                Path=BindingContext.TrackShipmentCommand}"
                                                        CommandParameter="{Binding}"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{DynamicResource TextButtonColor}"/>
                                                <Button Text="Label"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, 
                                                                Path=BindingContext.PrintLabelCommand}"
                                                        CommandParameter="{Binding}"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{DynamicResource TextButtonColor}"/>
                                                <Button Text="Update"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, 
                                                                Path=BindingContext.UpdateShipmentCommand}"
                                                        CommandParameter="{Binding}"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{DynamicResource TextButtonColor}"/>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>