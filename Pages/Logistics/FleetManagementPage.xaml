<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.Logistics.FleetManagementPage"
             Title="FleetManagementPage">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="{DynamicResource HeaderBackgroundColor}"
               Padding="20"
               CornerRadius="0">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="Fleet Management" 
                           FontSize="24" 
                           TextColor="{DynamicResource PrimaryTextColor}"
                           FontAttributes="Bold"/>
                    <Label Text="Vehicle maintenance, driver assignments, fuel tracking, compliance checks"
                           TextColor="{DynamicResource SecondaryTextColor}"/>
                </VerticalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <Button Text="Add Vehicle"
                            Command="{Binding AddVehicleCommand}"
                            BackgroundColor="{DynamicResource PrimaryButtonBackground}"
                            TextColor="{DynamicResource PrimaryButtonTextColor}"
                            Padding="15,10"/>
                    <Button Text="Schedule Maintenance"
                            Command="{Binding ScheduleMaintenanceCommand}"
                            BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                            TextColor="{DynamicResource SecondaryButtonTextColor}"
                            Padding="15,10"/>
                </HorizontalStackLayout>
            </Grid>
        </Frame>

        <!-- Main Content -->
        <Grid Grid.Row="1" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Fleet Summary -->
            <Frame Grid.Column="0"
                   BackgroundColor="{DynamicResource SidebarBackgroundColor}"
                   Padding="15"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="20">
                    <!-- Fleet Stats -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Fleet Overview"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="16"
                               FontAttributes="Bold"/>

                        <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                               Padding="15"
                               CornerRadius="8">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8">
                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="Total Vehicles:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding TotalVehicles}"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="12"/>
                                </Grid>

                                <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="Operational:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding OperationalVehicles}"
                                           TextColor="{DynamicResource SuccessColor}"
                                           FontSize="12"/>
                                </Grid>

                                <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="Maintenance:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding MaintenanceVehicles}"
                                           TextColor="{DynamicResource WarningColor}"
                                           FontSize="12"/>
                                </Grid>

                                <Grid Grid.Row="3" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="Avg Fuel Efficiency:"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           FontSize="12"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding AverageFuelEfficiency, StringFormat='{0:F1} km/L'}"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           FontSize="12"/>
                                </Grid>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Vehicle Types -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Vehicle Types"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"/>

                        <CollectionView ItemsSource="{Binding VehicleTypes}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,Auto" Padding="10">
                                        <Label Grid.Column="0"
                                               Text="{Binding TypeName}"
                                               TextColor="{DynamicResource PrimaryTextColor}"
                                               FontSize="12"/>
                                        <Label Grid.Column="1"
                                               Text="{Binding Count}"
                                               TextColor="{DynamicResource SecondaryTextColor}"
                                               FontSize="12"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!-- Maintenance Alerts -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Maintenance Alerts"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"/>

                        <CollectionView ItemsSource="{Binding MaintenanceAlerts}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                                           Padding="10"
                                           CornerRadius="6"
                                           Margin="0,0,0,5">
                                        <Grid ColumnDefinitions="Auto,*" Padding="5">
                                            <BoxView Grid.Column="0"
                                                     Color="{Binding AlertColor}"
                                                     WidthRequest="8"
                                                     HeightRequest="8"
                                                     VerticalOptions="Center"
                                                     CornerRadius="4"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding AlertMessage}"
                                                   TextColor="{DynamicResource PrimaryTextColor}"
                                                   FontSize="11"
                                                   LineBreakMode="TailTruncation"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!-- Quick Actions -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Quick Actions"
                               TextColor="{DynamicResource PrimaryTextColor}"
                               FontSize="14"
                               FontAttributes="Bold"/>

                        <Button Text="Fuel Report"
                                Command="{Binding GenerateFuelReportCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Compliance Check"
                                Command="{Binding RunComplianceCheckCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                        <Button Text="Driver Assignment"
                                Command="{Binding AssignDriversCommand}"
                                BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Fleet Dashboard -->
            <Frame Grid.Column="1"
                   BackgroundColor="{DynamicResource CardBackgroundColor}"
                   Padding="20"
                   CornerRadius="10"
                   Margin="20,0,0,0">
                <Grid RowDefinitions="Auto,*">
                    <!-- Dashboard Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <HorizontalStackLayout Spacing="10">
                            <SearchBar Text="{Binding SearchText}"
                                       Placeholder="Search vehicles..."
                                       WidthRequest="200"
                                       BackgroundColor="{DynamicResource InputBackgroundColor}"
                                       CancelButtonColor="{DynamicResource PrimaryColor}"/>
                            <Picker Title="Status"
                                    ItemsSource="{Binding StatusFilters}"
                                    SelectedItem="{Binding SelectedStatus}"
                                    WidthRequest="150"/>
                            <Picker Title="Vehicle Type"
                                    ItemsSource="{Binding VehicleTypeFilters}"
                                    SelectedItem="{Binding SelectedVehicleType}"
                                    WidthRequest="150"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                            <Button Text="Refresh"
                                    Command="{Binding RefreshCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource TextButtonColor}"/>
                            <Button Text="Map View"
                                    Command="{Binding SwitchToMapViewCommand}"
                                    BackgroundColor="Transparent"
                                    TextColor="{DynamicResource TextButtonColor}"/>
                        </HorizontalStackLayout>
                    </Grid>

                    <!-- Vehicles Grid -->
                    <CollectionView Grid.Row="1" 
                                    ItemsSource="{Binding FilteredVehicles}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical"
                                             Span="2"
                                             VerticalItemSpacing="20"
                                             HorizontalItemSpacing="20"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="{DynamicResource SurfaceColor}"
                                       Padding="20"
                                       CornerRadius="10">
                                    <VerticalStackLayout Spacing="15">
                                        <!-- Vehicle Header -->
                                        <Grid>
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="{Binding VehicleId}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="18"
                                                       FontAttributes="Bold"/>
                                                <Label Text="{Binding VehicleType}"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="12"/>
                                            </VerticalStackLayout>
                                            <BoxView Color="{Binding StatusColor}"
                                                     WidthRequest="12"
                                                     HeightRequest="12"
                                                     HorizontalOptions="End"
                                                     CornerRadius="6"/>
                                        </Grid>

                                        <!-- Vehicle Details -->
                                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto"
                                              ColumnSpacing="15" RowSpacing="10">
                                            <!-- Driver -->
                                            <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="2">
                                                <Label Text="Driver"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding DriverName}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>

                                            <!-- Current Location -->
                                            <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="2">
                                                <Label Text="Location"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding CurrentLocation}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="12"
                                                       LineBreakMode="TailTruncation"/>
                                            </VerticalStackLayout>

                                            <!-- Fuel Efficiency -->
                                            <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="2">
                                                <Label Text="Fuel Efficiency"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding FuelEfficiency, StringFormat='{0:F1} km/L'}"
                                                       TextColor="{Binding FuelEfficiencyColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>

                                            <!-- Odometer -->
                                            <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="2">
                                                <Label Text="Odometer"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding Odometer, StringFormat='{0:N0} km'}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="14"/>
                                            </VerticalStackLayout>

                                            <!-- Maintenance -->
                                            <VerticalStackLayout Grid.Row="2" Grid.Column="0" Spacing="2">
                                                <Label Text="Next Maintenance"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding NextMaintenance, StringFormat='{0:MMM dd}'}"
                                                       TextColor="{Binding MaintenanceColor}"
                                                       FontSize="12"/>
                                            </VerticalStackLayout>

                                            <!-- Compliance -->
                                            <VerticalStackLayout Grid.Row="2" Grid.Column="1" Spacing="2">
                                                <Label Text="Compliance"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding ComplianceStatus}"
                                                       TextColor="{Binding ComplianceColor}"
                                                       FontSize="12"/>
                                            </VerticalStackLayout>
                                        </Grid>

                                        <!-- Current Assignment -->
                                        <Frame BackgroundColor="{DynamicResource CardBackgroundColor}"
                                               Padding="10"
                                               CornerRadius="6">
                                            <VerticalStackLayout Spacing="5">
                                                <Label Text="Current Assignment"
                                                       TextColor="{DynamicResource SecondaryTextColor}"
                                                       FontSize="11"/>
                                                <Label Text="{Binding CurrentAssignment}"
                                                       TextColor="{DynamicResource PrimaryTextColor}"
                                                       FontSize="12"
                                                       LineBreakMode="TailTruncation"/>
                                            </VerticalStackLayout>
                                        </Frame>

                                        <!-- Action Buttons -->
                                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                            <Button Grid.Column="0"
                                                    Text="View Details"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, 
                                                            Path=BindingContext.ViewVehicleDetailsCommand}"
                                                    CommandParameter="{Binding}"
                                                    BackgroundColor="{DynamicResource SecondaryButtonBackground}"
                                                    TextColor="{DynamicResource SecondaryButtonTextColor}"/>
                                            <Button Grid.Column="1"
                                                    Text="Maintenance"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, 
                                                            Path=BindingContext.ScheduleVehicleMaintenanceCommand}"
                                                    CommandParameter="{Binding}"
                                                    BackgroundColor="Transparent"
                                                    TextColor="{DynamicResource TextButtonColor}"/>
                                        </Grid>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>