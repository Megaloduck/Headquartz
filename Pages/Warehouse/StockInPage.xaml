<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.Warehouse.StockInPage"
             Title="StockInPage">
    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Stock In Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="20,15">
            <VerticalStackLayout Spacing="15">
                <HorizontalStackLayout>
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Goods Receiving" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        <Label Text="Receive goods, quality checks, put-away management, and supplier receipts" 
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                    </VerticalStackLayout>

                    <Border Background="{DynamicResource SuccessColor}"
                            Padding="15,10"
                            StrokeShape="RoundRectangle 10"
                            Margin="20,0,0,0">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="â¬‡ï¸" FontSize="18"/>
                            <Label Text="{Binding TodayReceipts}" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </HorizontalStackLayout>
                    </Border>
                </HorizontalStackLayout>

                <!-- Quick Actions -->
                <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="15">
                    <Border Grid.Column="0" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                <Label Text="Pending Receipts" 
                                       FontSize="12"
                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                <Label Text="{Binding PendingReceipts}" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource WarningColor}"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="Avg Processing Time" 
                                       FontSize="12"
                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                <Label Text="{Binding AvgProcessingTime, StringFormat='{0} mins'}" 
                                       FontSize="14"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>

                    <Button Grid.Column="1" 
                            Text="âž• New Receipt"
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            Padding="20,12"
                            CornerRadius="10"
                            Command="{Binding NewReceiptCommand}"/>

                    <Button Grid.Column="2" 
                            Text="ðŸ“‹ Scan Barcode"
                            BackgroundColor="{DynamicResource SuccessColor}"
                            TextColor="White"
                            Padding="20,12"
                            CornerRadius="10"
                            Command="{Binding ScanBarcodeCommand}"/>
                </Grid>
            </VerticalStackLayout>
        </Border>

        <!-- Stock In Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Receiving Stats -->
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                    <!-- Today's Receipts -->
                    <Border Grid.Column="0" Style="{StaticResource DashboardCardStyle}">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding TodayReceipts}" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryColor}"/>
                            <Label Text="Today's Receipts" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Items Received -->
                    <Border Grid.Column="1" Style="{StaticResource DashboardCardStyle}">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding ItemsReceived}" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource SuccessColor}"/>
                            <Label Text="Items Received" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Quality Pass -->
                    <Border Grid.Column="2" Style="{StaticResource DashboardCardStyle}">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding QualityPassRate, StringFormat='{0:P0}'}" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource InfoColor}"/>
                            <Label Text="Quality Pass Rate" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Avg Delay -->
                    <Border Grid.Column="3" Style="{StaticResource DashboardCardStyle}">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding AvgDelay, StringFormat='{0} hrs'}" 
                                   FontSize="24" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource WarningColor}"/>
                            <Label Text="Avg Delay" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Quick Receipt Form -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Quick Goods Receipt" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="20" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="15">
                            <!-- Supplier -->
                            <VerticalStackLayout Grid.Column="0" Grid.Row="0" Spacing="5">
                                <Label Text="Supplier" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Picker ItemsSource="{Binding Suppliers}"
                                        SelectedItem="{Binding SelectedSupplier}"
                                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                                        TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <!-- PO Number -->
                            <VerticalStackLayout Grid.Column="1" Grid.Row="0" Spacing="5">
                                <Label Text="PO Number" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Entry Text="{Binding PONumber}"
                                       Placeholder="Enter PO number"
                                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <!-- Product -->
                            <VerticalStackLayout Grid.Column="0" Grid.Row="1" Spacing="5">
                                <Label Text="Product" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Picker ItemsSource="{Binding Products}"
                                        SelectedItem="{Binding SelectedProduct}"
                                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                                        TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <!-- Quantity -->
                            <VerticalStackLayout Grid.Column="1" Grid.Row="1" Spacing="5">
                                <Label Text="Quantity" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Entry Text="{Binding Quantity}"
                                       Placeholder="Enter quantity"
                                       Keyboard="Numeric"
                                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <!-- Batch/Lot -->
                            <VerticalStackLayout Grid.Column="0" Grid.Row="2" Spacing="5">
                                <Label Text="Batch/Lot Number" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Entry Text="{Binding BatchNumber}"
                                       Placeholder="Enter batch number"
                                       BackgroundColor="{DynamicResource CardBackgroundColor}"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <!-- Expiry Date -->
                            <VerticalStackLayout Grid.Column="1" Grid.Row="2" Spacing="5">
                                <Label Text="Expiry Date" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <DatePicker Date="{Binding ExpiryDate}"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>

                            <!-- Notes -->
                            <VerticalStackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Spacing="5">
                                <Label Text="Notes" 
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Editor Text="{Binding ReceiptNotes}"
                                        HeightRequest="60"
                                        BackgroundColor="{DynamicResource CardBackgroundColor}"
                                        TextColor="{DynamicResource PrimaryTextColor}"/>
                            </VerticalStackLayout>
                        </Grid>

                        <Button Text="âœ… Receive Goods"
                                BackgroundColor="{DynamicResource PrimaryColor}"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"
                                FontSize="16"
                                Command="{Binding ReceiveGoodsCommand}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Pending Receipts -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <HorizontalStackLayout>
                            <Label Text="ðŸ“‹ Pending Receipts" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding PendingReceipts}" 
                                   BackgroundColor="{DynamicResource WarningColor}"
                                   TextColor="White"
                                   Padding="8,4"
                                   Margin="10,0,0,0"/>

                        </HorizontalStackLayout>

                        <CollectionView ItemsSource="{Binding PendingReceiptsList}" HeightRequest="250">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="15" 
                                            Margin="0,0,0,10"
                                            Background="{DynamicResource HeaderBackgroundColor}"
                                            StrokeShape="RoundRectangle 8">
                                        <Grid ColumnDefinitions="100,*,100,100,100,80" ColumnSpacing="10">
                                            <!-- Receipt Number -->
                                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                <Label Text="Receipt #" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Label Text="{Binding ReceiptNumber}" 
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryColor}"/>
                                            </VerticalStackLayout>

                                            <!-- Supplier & Product -->
                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="{Binding SupplierName}" 
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                                <Label Text="{Binding ProductName}" 
                                                       FontSize="12"
                                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                                                <Label Text="PO: {Binding PONumber}" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <!-- Quantity -->
                                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                <Label Text="Quantity" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Label Text="{Binding Quantity}" 
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <!-- Expected Date -->
                                            <VerticalStackLayout Grid.Column="3" Spacing="2">
                                                <Label Text="Expected" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Label Text="{Binding ExpectedDate, StringFormat='{0:MMM dd}'}" 
                                                       FontSize="13"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <!-- Status -->
                                            <VerticalStackLayout Grid.Column="4" Spacing="2">
                                                <Label Text="Status" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Border Background="{Binding StatusColor}"
                                                        Padding="8,4"
                                                        StrokeShape="RoundRectangle 5">
                                                    <Label Text="{Binding Status}" 
                                                           FontSize="11"
                                                           FontAttributes="Bold"
                                                           TextColor="White"
                                                           HorizontalOptions="Center"/>
                                                </Border>
                                            </VerticalStackLayout>

                                            <!-- Actions -->
                                            <Button Grid.Column="5" 
                                                    Text="Process"
                                                    BackgroundColor="{DynamicResource PrimaryColor}"
                                                    TextColor="White"
                                                    Padding="10,5"
                                                    CornerRadius="6"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ProcessReceiptCommand}"
                                                    CommandParameter="{Binding Id}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!-- Quality Check Queue -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <HorizontalStackLayout>
                            <Label Text="ðŸ”¬ Quality Check Queue" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding QualityCheckQueue}" 
                                   BackgroundColor="{DynamicResource WarningColor}"
                                   TextColor="White"
                                   Padding="8,4"
                                   Margin="10,0,0,0"/>

                        </HorizontalStackLayout>

                        <CollectionView ItemsSource="{Binding QualityChecks}" HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12" 
                                            Margin="0,0,0,5"
                                            Background="{DynamicResource HeaderBackgroundColor}"
                                            StrokeShape="RoundRectangle 8">
                                        <Grid ColumnDefinitions="Auto,*,100,100,80" ColumnSpacing="10">
                                            <Label Grid.Column="0" 
                                                   Text="ðŸ§ª" 
                                                   FontSize="16"/>

                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="{Binding ProductName}" 
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                                <Label Text="Batch: {Binding BatchNumber}" 
                                                       FontSize="12"
                                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                <Label Text="Received" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Label Text="{Binding ReceivedDate, StringFormat='{0:MMM dd}'}" 
                                                       FontSize="13"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="3" Spacing="2">
                                                <Label Text="Inspector" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Label Text="{Binding Inspector}" 
                                                       FontSize="13"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <Button Grid.Column="4" 
                                                    Text="Check"
                                                    BackgroundColor="{DynamicResource PrimaryColor}"
                                                    TextColor="White"
                                                    Padding="10,5"
                                                    CornerRadius="6"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.PerformQualityCheckCommand}"
                                                    CommandParameter="{Binding Id}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Stock In Actions -->
        <Border Grid.Row="2" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="15">
            <Grid ColumnDefinitions="*,Auto">
                <HorizontalStackLayout Grid.Column="0" Spacing="15">
                    <Button Text="ðŸ“Š Receiving Report" 
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            TextColor="{DynamicResource PrimaryTextColor}"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding ReceivingReportCommand}"/>

                    <Button Text="ðŸ”„ Batch Process" 
                            BackgroundColor="{DynamicResource WarningColor}"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding BatchProcessCommand}"
                            IsEnabled="{Binding HasPendingReceipts}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <Button Text="ðŸ“¥ Export Receipts" 
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding ExportReceiptsCommand}"/>

                    <Button Text="âœ… Complete All" 
                            BackgroundColor="{DynamicResource SuccessColor}"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding CompleteAllCommand}"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

    </Grid>

</ContentPage>