<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.Warehouse.StockOutPage"
             Title="StockOutPage">
    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Stock Out Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="20,15">
            <VerticalStackLayout Spacing="15">
                <HorizontalStackLayout>
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Order Fulfillment" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>
                        <Label Text="Pick/pack operations, shipping preparation, and order fulfillment" 
                               FontSize="14"
                               TextColor="{DynamicResource SecondaryTextColor}"/>
                    </VerticalStackLayout>

                    <Border Background="{DynamicResource PrimaryColor}"
                            Padding="15,10"
                            StrokeShape="RoundRectangle 10"
                            Margin="20,0,0,0">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="â¬†ï¸" FontSize="18"/>
                            <Label Text="{Binding TodayShipments}" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </HorizontalStackLayout>
                    </Border>
                </HorizontalStackLayout>

                <!-- Fulfillment Stats -->
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                    <!-- Pending Orders -->
                    <Border Grid.Column="0" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                            <Label Text="Pending Orders" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Text="{Binding PendingOrders}" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource WarningColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Today's Target -->
                    <Border Grid.Column="1" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                            <Label Text="Today's Target" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Text="{Binding TodaysTarget}" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Pick Rate -->
                    <Border Grid.Column="2" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                            <Label Text="Pick Rate" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Text="{Binding PickRate, StringFormat='{0}/hr'}" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource SuccessColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Accuracy -->
                    <Border Grid.Column="3" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="15,12"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                            <Label Text="Pick Accuracy" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                            <Label Text="{Binding PickAccuracy, StringFormat='{0:P0}'}" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource InfoColor}"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>
        </Border>

        <!-- Stock Out Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Fulfillment Pipeline -->
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                    <!-- To Pick -->
                    <Border Grid.Column="0" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="20"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Border Background="#FF6B6B"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    StrokeShape="RoundRectangle 12">
                                <Label Text="ðŸ“‹" 
                                       FontSize="24"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <Label Text="To Pick" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding ToPickCount}" 
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#FF6B6B"/>
                            <Label Text="orders" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Picking -->
                    <Border Grid.Column="1" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="20"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Border Background="#FFD166"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    StrokeShape="RoundRectangle 12">
                                <Label Text="ðŸ“¦" 
                                       FontSize="24"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <Label Text="Picking" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding PickingCount}" 
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#FFD166"/>
                            <Label Text="in progress" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- To Pack -->
                    <Border Grid.Column="2" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="20"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Border Background="#4ECDC4"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    StrokeShape="RoundRectangle 12">
                                <Label Text="ðŸ“¦" 
                                       FontSize="24"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <Label Text="To Pack" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding ToPackCount}" 
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#4ECDC4"/>
                            <Label Text="orders" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- To Ship -->
                    <Border Grid.Column="3" 
                            Background="{DynamicResource CardBackgroundColor}"
                            Padding="20"
                            StrokeShape="RoundRectangle 10">
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Border Background="#06D6A0"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    StrokeShape="RoundRectangle 12">
                                <Label Text="ðŸšš" 
                                       FontSize="24"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <Label Text="To Ship" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding ToShipCount}" 
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#06D6A0"/>
                            <Label Text="orders" 
                                   FontSize="12"
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Quick Pick List -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <HorizontalStackLayout>
                            <Label Text="ðŸ“‹ Quick Pick List" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding QuickPickItems.Count}" 
                                   BackgroundColor="{DynamicResource PrimaryColor}"
                                   TextColor="White"
                                   Padding="8,4"
                                   Margin="10,0,0,0"/>

                        </HorizontalStackLayout>

                        <CollectionView ItemsSource="{Binding QuickPickItems}" HeightRequest="200">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12" 
                                            Margin="0,0,0,5"
                                            Background="{DynamicResource HeaderBackgroundColor}"
                                            StrokeShape="RoundRectangle 8">
                                        <Grid ColumnDefinitions="*,100,100,100,80" ColumnSpacing="10">
                                            <!-- Product Info -->
                                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                <Label Text="{Binding ProductName}" 
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                                <Label Text="{Binding SKU}" 
                                                       FontSize="12"
                                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                                                <Label Text="Location: {Binding Location}" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <!-- Order Number -->
                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="Order #" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Label Text="{Binding OrderNumber}" 
                                                       FontSize="13"
                                                       TextColor="{DynamicResource PrimaryColor}"/>
                                            </VerticalStackLayout>

                                            <!-- Quantity -->
                                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                <Label Text="Quantity" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Label Text="{Binding Quantity}" 
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <!-- Priority -->
                                            <VerticalStackLayout Grid.Column="3" Spacing="2">
                                                <Label Text="Priority" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Border Background="{Binding PriorityColor}"
                                                        Padding="8,4"
                                                        StrokeShape="RoundRectangle 5">
                                                    <Label Text="{Binding Priority}" 
                                                           FontSize="11"
                                                           FontAttributes="Bold"
                                                           TextColor="White"
                                                           HorizontalOptions="Center"/>
                                                </Border>
                                            </VerticalStackLayout>

                                            <!-- Pick Button -->
                                            <Button Grid.Column="4" 
                                                    Text="Pick"
                                                    BackgroundColor="{DynamicResource PrimaryColor}"
                                                    TextColor="White"
                                                    Padding="10,5"
                                                    CornerRadius="6"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.PickItemCommand}"
                                                    CommandParameter="{Binding Id}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!-- Batch Picking -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="ðŸŽ¯ Batch Picking" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource PrimaryTextColor}"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                            <!-- Batch Configuration -->
                            <VerticalStackLayout Grid.Column="0" Spacing="15">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Batch Size" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Slider Minimum="1"
                                           Maximum="20"
                                           Value="{Binding BatchSize}"
                                           MinimumTrackColor="{DynamicResource PrimaryColor}"
                                           MaximumTrackColor="{DynamicResource CardBackgroundColor}"/>
                                    <Label Text="{Binding BatchSize, StringFormat='{0} orders'}" 
                                           FontSize="14"
                                           TextColor="{DynamicResource PrimaryColor}"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Zone" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Picker ItemsSource="{Binding Zones}"
                                            SelectedItem="{Binding SelectedZone}"
                                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                                            TextColor="{DynamicResource PrimaryTextColor}"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout Spacing="5">
                                    <Label Text="Picker" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Picker ItemsSource="{Binding Pickers}"
                                            SelectedItem="{Binding SelectedPicker}"
                                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                                            TextColor="{DynamicResource PrimaryTextColor}"/>
                                </VerticalStackLayout>
                            </VerticalStackLayout>

                            <!-- Batch Preview -->
                            <Border Grid.Column="1" 
                                    Background="{DynamicResource HeaderBackgroundColor}"
                                    Padding="20"
                                    StrokeShape="RoundRectangle 10">
                                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                                    <Label Text="Batch Preview" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"
                                           HorizontalOptions="Center"/>

                                    <Label Text="{Binding BatchSize, StringFormat='{0} Orders'}" 
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryColor}"
                                           HorizontalOptions="Center"/>

                                    <Label Text="{Binding SelectedZone}" 
                                           FontSize="14"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           HorizontalOptions="Center"/>

                                    <Label Text="{Binding SelectedPicker}" 
                                           FontSize="14"
                                           TextColor="{DynamicResource SecondaryTextColor}"
                                           HorizontalOptions="Center"/>

                                    <Label Text="{Binding EstimatedTime, StringFormat='Est: {0} mins'}" 
                                           FontSize="12"
                                           TextColor="{DynamicResource TertiaryTextColor}"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>

                        <Button Text="ðŸš€ Create Pick Batch"
                                BackgroundColor="{DynamicResource PrimaryColor}"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"
                                FontSize="16"
                                Command="{Binding CreatePickBatchCommand}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Packing Station -->
                <Border Background="{DynamicResource CardBackgroundColor}"
                        Padding="20"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="15">
                        <HorizontalStackLayout>
                            <Label Text="ðŸ“¦ Packing Station" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}"/>
                            <Label Text="{Binding PackingQueue}" 
                                   BackgroundColor="{DynamicResource WarningColor}"
                                   TextColor="White"
                                   Padding="8,4"
                                   Margin="10,0,0,0"/>

                        </HorizontalStackLayout>

                        <CollectionView ItemsSource="{Binding PackingItems}" HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12" 
                                            Margin="0,0,0,5"
                                            Background="{DynamicResource HeaderBackgroundColor}"
                                            StrokeShape="RoundRectangle 8">
                                        <Grid ColumnDefinitions="Auto,*,100,100,80" ColumnSpacing="10">
                                            <Label Grid.Column="0" 
                                                   Text="ðŸ“¦" 
                                                   FontSize="16"/>

                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="Order #{Binding OrderNumber}" 
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                                <Label Text="{Binding ItemCount, StringFormat='{0} items'}" 
                                                       FontSize="12"
                                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                <Label Text="Picked By" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Label Text="{Binding Picker}" 
                                                       FontSize="13"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="3" Spacing="2">
                                                <Label Text="Time" 
                                                       FontSize="11"
                                                       TextColor="{DynamicResource TertiaryTextColor}"/>
                                                <Label Text="{Binding PickTime, StringFormat='{0:HH:mm}'}" 
                                                       FontSize="13"
                                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                            </VerticalStackLayout>

                                            <Button Grid.Column="4" 
                                                    Text="Pack"
                                                    BackgroundColor="{DynamicResource PrimaryColor}"
                                                    TextColor="White"
                                                    Padding="10,5"
                                                    CornerRadius="6"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.PackOrderCommand}"
                                                    CommandParameter="{Binding Id}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Stock Out Actions -->
        <Border Grid.Row="2" 
                Background="{DynamicResource HeaderBackgroundColor}"
                Padding="15">
            <Grid ColumnDefinitions="*,Auto">
                <HorizontalStackLayout Grid.Column="0" Spacing="15">
                    <Button Text="ðŸ“Š Fulfillment Report" 
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            TextColor="{DynamicResource PrimaryTextColor}"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding FulfillmentReportCommand}"/>

                    <Button Text="ðŸ”„ Optimize Route" 
                            BackgroundColor="{DynamicResource WarningColor}"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding OptimizeRouteCommand}"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <Button Text="ðŸ“± Scan to Pick" 
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding ScanToPickCommand}"/>

                    <Button Text="âœ… Complete Batch" 
                            BackgroundColor="{DynamicResource SuccessColor}"
                            TextColor="White"
                            Padding="15,10"
                            CornerRadius="8"
                            Command="{Binding CompleteBatchCommand}"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

    </Grid>

</ContentPage>