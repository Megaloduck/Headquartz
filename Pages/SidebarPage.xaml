<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Headquartz.Pages.SidebarPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">

    <Grid ColumnDefinitions="260,*">

        <!-- Left Sidebar - Fixed -->
        <Border Grid.Column="0"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkSecondaryBackground}}"
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource BorderColor}}">

            <Grid RowDefinitions="Auto,*,Auto">

                <!-- Sidebar Header -->
                <Border Grid.Row="0" 
                        Padding="20,24,20,20"
                        StrokeThickness="0">
                    <VerticalStackLayout Spacing="4">
                        <HorizontalStackLayout Spacing="12" HorizontalOptions="Start">
                            <Border BackgroundColor="{StaticResource Primary}"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="HQ" 
                                       FontSize="18" 
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                <Label Text="Headquartz" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="{AppThemeBinding Light={StaticResource DarkOnLightBackground}, Dark={StaticResource LightOnDarkBackground}}"/>
                                <Label Text="ERP System" 
                                       FontSize="11" 
                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryDarkText}}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <!-- User Role Badge -->
                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource DarkBackground}}"
                                Padding="10,6"
                                StrokeShape="RoundRectangle 6"
                                StrokeThickness="0"
                                Margin="0,12,0,0">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ‘¤" FontSize="14"/>
                                <Label Text="{Binding RoleName}" 
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}"/>
                            </HorizontalStackLayout>
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <!-- Navigation Menu -->
                <ScrollView Grid.Row="1" Padding="12,8">
                    <VerticalStackLayout Spacing="2">

                        <!-- MAIN Section -->
                        <Label Text="Main Menu" Style="{StaticResource SidebarSectionHeader}"/>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToDashboardCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ“Š" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <Label Text="Dashboard" Style="{StaticResource SidebarItemText}" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToOverviewCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ " FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <Label Text="Overview" Style="{StaticResource SidebarItemText}" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>

                        <!-- MODULES Section -->
                        <Label Text="MODULES" Style="{StaticResource SidebarSectionHeader}" Margin="12,16,12,4"/>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToWarehouseCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ“¦" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Warehouse" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="Stock management" FontSize="10" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToSalesCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ›’" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Sales" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="Orders and Customers" FontSize="10" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToMarketCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ“ˆ" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Market" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="Demand and Pricing" FontSize="10" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToProductionCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="âš™ï¸" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Production" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="Manufacturing ops" FontSize="10" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToLogisticsCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸšš" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Logistics" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="Shipping and Delivery" FontSize="10" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToFinanceCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ’°" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Finance" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="Revenue and Costs" FontSize="10" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToHRCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ‘¥" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="HR" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="Employee management" FontSize="10" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                        <!-- SYSTEM Section -->
                        <Label Text="SYSTEM" Style="{StaticResource SidebarSectionHeader}" Margin="12,16,12,4"/>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToUsersCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="ðŸ‘¨â€ðŸ’¼" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Users" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="User management" FontSize="10" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToSettingsCommand}"/>
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout Spacing="12" Padding="12,12">
                                <Border Style="{StaticResource SidebarLayout}">
                                    <Label Text="âš™ï¸" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                                    <Label Text="Settings" Style="{StaticResource SidebarItemText}"/>
                                    <Label Text="System configuration" FontSize="10" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                    </VerticalStackLayout>
                </ScrollView>

                <!-- Sidebar Footer -->
                <Border Grid.Row="2" Padding="12" StrokeThickness="0">
                    <VerticalStackLayout Spacing="8">
                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource BorderColor}}"/>

                        <Border Background="Transparent" Padding="8" StrokeShape="RoundRectangle 6" StrokeThickness="0">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding IsDarkMode}" FontSize="16" VerticalOptions="Center" />
                                <Label Text="Dark Mode" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryDarkText}}" VerticalOptions="Center" HorizontalOptions="StartAndExpand"/>
                                <Switch IsToggled="{Binding IsDarkMode}" OnColor="{StaticResource Primary}" ThumbColor="White" VerticalOptions="Center" Scale="0.7"/>
                            </HorizontalStackLayout>
                        </Border>

                        <HorizontalStackLayout Spacing="6" Padding="8,4">
                            <Label Text="âœ“" FontSize="10" TextColor="{StaticResource Success}" VerticalOptions="Center"/>
                            <Label Text="v1.0.0 â€¢ LAN Ready" FontSize="10" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

            </Grid>
        </Border>

        <!-- Right Content Area -->
        <ContentView Grid.Column="1" x:Name="ContentArea" />

    </Grid>

</ContentPage>