                        StrokeThickness="0"
                        Background="{DynamicResource HeaderBackgroundColor}">

                    <VerticalStackLayout Spacing="12">
                        <!-- Logo & App Name -->
                        <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                            <Border Background="{DynamicResource PrimaryColor}"
                                    WidthRequest="42"
                                    HeightRequest="42"
                                    Padding="0"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 10">
                                <Label Text="HQ" 
                                       FontSize="18"    
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                <Label Text="Headquartz" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                                <Label Text="ERP Simulation Platform" 
                                       FontSize="11" 
                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <!-- User Role Badge -->
                        <Border Background="{DynamicResource CardBackgroundColor}"
                                Padding="12,8"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="0">

                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
