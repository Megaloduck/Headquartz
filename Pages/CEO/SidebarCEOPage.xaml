                                       VerticalOptions="Center"/>
                            </Border>
                            <Label Text="v1.0.0 â€¢ Production Ready" 
                                   FontSize="11" 
                                   TextColor="{DynamicResource TertiaryTextColor}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

            </Grid>
        </Border>

        <!-- Right Content Area -->
        <ContentView Grid.Column="1" 
                     x:Name="ContentArea" 
                     BackgroundColor="{DynamicResource PageBackgroundColor}" />

    </Grid>

</ContentPage>