                                </Border>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="Finance" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Label Text="Revenue and costs" 
                                           FontSize="11" 
                                           TextColor="{DynamicResource TertiaryTextColor}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>

                        <!-- HR -->
                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToHRCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="40,*" ColumnSpacing="8">
                                <Border Grid.Column="0" 
                                        WidthRequest="36"
                                        HeightRequest="36"
                                        Background="{DynamicResource CardBackgroundColor}"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 8">
                                    <Label Text="ðŸ‘¥" 
                                           FontSize="16" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="Human Resource" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Label Text="Employee management" 
                                           FontSize="11" 
                                           TextColor="{DynamicResource TertiaryTextColor}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>

                        <!-- Divider -->
                        <BoxView HeightRequest="1" 
                                 Color="{DynamicResource DividerColor}"
                                 Margin="12,12"/>

                        <!-- SYSTEM Section -->
                        <Label Text="SYSTEM" 
                               Style="{StaticResource SidebarSectionHeader}"
                               Margin="12,0,12,8"/>

                        <!-- Users -->
                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToUsersCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="40,*" ColumnSpacing="8">
                                <Border Grid.Column="0" 
                                        WidthRequest="36"
                                        HeightRequest="36"
                                        Background="{DynamicResource CardBackgroundColor}"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 8">
                                    <Label Text="ðŸ‘¨â€ðŸ’¼" 
                                           FontSize="16" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="User Management" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Label Text="Access and permissions" 
                                           FontSize="11" 
                                           TextColor="{DynamicResource TertiaryTextColor}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>

                        <!-- Settings -->
                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToSettingsCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="40,*" ColumnSpacing="8">
                                <Border Grid.Column="0" 
                                        WidthRequest="36"
                                        HeightRequest="36"
                                        Background="{DynamicResource CardBackgroundColor}"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 8">
                                    <Label Text="âš™ï¸" 
                                           FontSize="16" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="Settings" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Label Text="System configuration" 
                                           FontSize="11" 
                                           TextColor="{DynamicResource TertiaryTextColor}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>

                    </VerticalStackLayout>
                </ScrollView>

                <!-- Sidebar Footer -->
                <Border Grid.Row="2" 
                        StrokeThickness="0" 
                        Padding="16,12,16,16"
                        Background="{DynamicResource HeaderBackgroundColor}">

                    <VerticalStackLayout Spacing="12">
                        <!-- Divider -->
                        <BoxView HeightRequest="1" 
                                 Color="{DynamicResource DividerColor}"
                                 Margin="-16,0"/>

                        <!-- Dark Mode Toggle -->
                        <Border Background="{DynamicResource CardBackgroundColor}"
                                Padding="12,8"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 10">

                            <Grid ColumnDefinitions="auto,*" ColumnSpacing="8">
                                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                                    <Label Text="ðŸŒ™" 
                                           FontSize="16"
                                           VerticalOptions="Center"/>
                                    <VerticalStackLayout Spacing="1">
                                        <Label Text="Dark Mode" 
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource PrimaryTextColor}"/>
                                        <Label Text="Toggle theme" 
                                               FontSize="11"
                                               TextColor="{DynamicResource TertiaryTextColor}"/>
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>

                                <Switch Grid.Column="1"
                                        IsToggled="{Binding IsDarkMode}"
                                        OnColor="{DynamicResource PrimaryButtonBackground}"
                                        ThumbColor="{DynamicResource PrimaryTextColor}"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        Scale="0.8"/>
                            </Grid>
                        </Border>

                        <!-- Version Info -->
                        <HorizontalStackLayout Spacing="6" HorizontalOptions="Center">
                            <Border Background="{DynamicResource SuccessColor}"
                                    WidthRequest="16"
                                    HeightRequest="16"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 8">
