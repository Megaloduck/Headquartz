                                       VerticalTextAlignment="Center"
                                       TextColor="{DynamicResource PrimaryTextColor}"/>
                            </HorizontalStackLayout>
                        </Border>

                        <!-- Divider -->
                        <BoxView HeightRequest="1" 
                                 Color="{DynamicResource DividerColor}"
                                 Margin="-16,0"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Navigation Menu -->
                <ScrollView Grid.Row="1" 
                            Padding="8,0,8,0"
                            VerticalScrollBarVisibility="Never">
                    <VerticalStackLayout Spacing="2">

                        <!-- MAIN Section -->
                        <Label Text="MAIN MENU" 
                               Style="{StaticResource SidebarSectionHeader}"
                               Margin="12,0,12,8"/>

                        <!-- Dashboard -->
                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToDashboardCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="40,*" ColumnSpacing="8">
                                <Border Grid.Column="0" 
                                        WidthRequest="36"
