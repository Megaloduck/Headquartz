                                    <Label Text="Warehouse" 
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Label Text="Inventory and stock" 
                                           FontSize="11" 
                                           TextColor="{DynamicResource TertiaryTextColor}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>

                        <!-- Sales -->
                        <Border Style="{StaticResource SidebarItemStyle}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToSalesCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="40,*" ColumnSpacing="8" >
                                <Border Grid.Column="0" 
                                        WidthRequest="36"
                                        HeightRequest="36"
                                        Background="{DynamicResource CardBackgroundColor}"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 8">
                                    <Label Text="ðŸ›’" 
