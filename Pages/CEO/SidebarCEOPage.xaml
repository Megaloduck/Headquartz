                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource PrimaryTextColor}"/>
                                    <Label Text="Orders and customers" 
                                           FontSize="11" 
                                           TextColor="{DynamicResource TertiaryTextColor}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>

                        <!-- Marketing -->
                        <Border Style="{StaticResource SidebarItemStyle}">
