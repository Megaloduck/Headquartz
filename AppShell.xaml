<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Headquartz.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Headquartz.Pages"
    Shell.FlyoutBehavior="Locked"
    Shell.FlyoutWidth="260"
    Shell.NavBarIsVisible="False"
    Title="Headquartz">

    <!-- Modern ERP Sidebar -->
    <Shell.FlyoutContent>
        <Grid RowDefinitions="Auto,*,Auto"
              BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkSecondaryBackground}}">

            <!-- Compact Header -->
            <Border Grid.Row="0" 
                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkSecondaryBackground}}"
                    Padding="20,24,20,20"
                    StrokeThickness="0">
                <VerticalStackLayout Spacing="4">
                    <HorizontalStackLayout Spacing="12" HorizontalOptions="Start">
                        <Border BackgroundColor="{StaticResource Primary}"
                                WidthRequest="40"
                                HeightRequest="40"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 8">
                            <Label Text="HQ" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                        <VerticalStackLayout Spacing="0" VerticalOptions="Center">
                            <Label Text="Headquartz" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="{AppThemeBinding Light={StaticResource DarkOnLightBackground}, Dark={StaticResource LightOnDarkBackground}}"/>
                            <Label Text="ERP System" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryDarkText}}"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <!-- User Role Badge -->
                    <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource DarkBackground}}"
                            Padding="10,6"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0"
                            Margin="0,12,0,0">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ‘¤" FontSize="14"/>
                            <Label Text="{Binding RoleName}" 
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"/>
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Border>

            <!-- Navigation Menu -->
            <ScrollView Grid.Row="1" Padding="12,8">
                <VerticalStackLayout Spacing="2">

                    <!-- Main Navigation Section -->
                    <Label Text="Main Menu" 
                           Style="{StaticResource SidebarSectionHeader}"/>

                    <!-- Dashboard -->
                    <Border Style="{StaticResource SidebarItemStyle}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToDashboardCommand}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout Spacing="12" Padding="12,12">
                            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                                    WidthRequest="32"
                                    HeightRequest="32"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 6">
                                <Label Text="ðŸ“Š" 
                                       FontSize="16" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <Label Text="Dashboard" 
                                   Style="{StaticResource SidebarItemText}"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Overview -->
                    <Border Style="{StaticResource SidebarItemStyle}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToMainCommand}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout Spacing="12" Padding="12,12">
                            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource DarkBackground}}"
                                    WidthRequest="32"
                                    HeightRequest="32"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 6">
                                <Label Text="ðŸ " 
                                       FontSize="16" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <Label Text="Overview" 
                                   Style="{StaticResource SidebarItemText}"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Modules Section -->
                    <Label Text="MODULES" 
                           Style="{StaticResource SidebarSectionHeader}"
                           Margin="12,16,12,4"/>

                    <!-- Inventory -->
                    <Border Style="{StaticResource SidebarItemStyle}"
                            x:Name="InventoryItem">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToInventoryCommand}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout Spacing="12" Padding="12,12">
                            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource DarkBackground}}"
                                    WidthRequest="32"
                                    HeightRequest="32"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 6">
                                <Label Text="ðŸ“¦" 
                                       FontSize="16" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <VerticalStackLayout Spacing="0" VerticalOptions="Center" HorizontalOptions="StartAndExpand">
                                <Label Text="Warehouse" 
                                       Style="{StaticResource SidebarItemText}"/>
                                <Label Text="Stock management" 
                                       FontSize="10"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Market -->
                    <Border Style="{StaticResource SidebarItemStyle}"
                            x:Name="MarketItem">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToMarketCommand}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout Spacing="12" Padding="12,12">
                            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource DarkBackground}}"
                                    WidthRequest="32"
                                    HeightRequest="32"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 6">
                                <Label Text="ðŸ“ˆ" 
                                       FontSize="16" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <VerticalStackLayout Spacing="0" VerticalOptions="Center" HorizontalOptions="StartAndExpand">
                                <Label Text="Market" 
                                       Style="{StaticResource SidebarItemText}"/>
                                <Label Text="Demand and Pricing" 
                                       FontSize="10"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Finance -->
                    <Border Style="{StaticResource SidebarItemStyle}"
                            x:Name="FinanceItem">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToFinanceCommand}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout Spacing="12" Padding="12,12">
                            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource DarkBackground}}"
                                    WidthRequest="32"
                                    HeightRequest="32"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 6">
                                <Label Text="ðŸ’°" 
                                       FontSize="16" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <VerticalStackLayout Spacing="0" VerticalOptions="Center" HorizontalOptions="StartAndExpand">
                                <Label Text="Finance" 
                                       Style="{StaticResource SidebarItemText}"/>
                                <Label Text="Revenue and Costs" 
                                       FontSize="10"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Human Resources -->
                    <Border Style="{StaticResource SidebarItemStyle}"
                            x:Name="HRItem">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToHRCommand}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout Spacing="12" Padding="12,12">
                            <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource DarkBackground}}"
                                    WidthRequest="32"
                                    HeightRequest="32"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 6">
                                <Label Text="ðŸ‘¥" 
                                       FontSize="16" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            <VerticalStackLayout Spacing="0" VerticalOptions="Center" HorizontalOptions="StartAndExpand">
                                <Label Text="HR" 
                                       Style="{StaticResource SidebarItemText}"/>
                                <Label Text="Employee management" 
                                       FontSize="10"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>
                    
                    <!-- Modules Section -->
                    <Label Text="System" 
                           Style="{StaticResource SidebarSectionHeader}"
                           Margin="12,16,12,4"/>

                </VerticalStackLayout>
            </ScrollView>

            <!-- Compact Footer -->
            <Border Grid.Row="2" 
                    Padding="12"
             
                    StrokeThickness="0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource BorderColor}}">
                <VerticalStackLayout Spacing="8">

                    <!-- Divider -->
                    <BoxView HeightRequest="1" 
                             Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource BorderColor}}"/>

                    <!-- Theme Toggle - Compact -->
                    <Border Background="Transparent"
                            Padding="8"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="0">
                        <HorizontalStackLayout Spacing="10" HorizontalOptions="FillAndExpand">
                            <Label Text="{Binding IsDarkMode}" 
                                   FontSize="16"
                                   VerticalOptions="Center" />
                            <Label Text="Dark Mode" 
                                   FontSize="12" 
                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryDarkText}}" 
                                   VerticalOptions="Center"
                                   HorizontalOptions="StartAndExpand"/>
                            <Switch IsToggled="{Binding IsDarkMode}" 
                                    OnColor="{StaticResource Primary}" 
                                    ThumbColor="White"
                                    VerticalOptions="Center"
                                    Scale="0.7"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Version - Minimalist -->
                    <HorizontalStackLayout Spacing="6" Padding="8,4" HorizontalOptions="Start">
                        <Label Text="âœ“" 
                               FontSize="10" 
                               TextColor="{StaticResource Success}"
                               VerticalOptions="Center"/>
                        <Label Text="v1.0.0 â€¢ LAN Ready" 
                               FontSize="10" 
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource SecondaryDarkText}}"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

        </Grid>
    </Shell.FlyoutContent>

    <!-- Main Shell Items -->
    <FlyoutItem Title="Dashboard" Route="dashboard">
        <ShellContent ContentTemplate="{DataTemplate pages:DashboardPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Overview" Route="main">
        <ShellContent ContentTemplate="{DataTemplate pages:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Warehouse" Route="inventory" x:Name="InventoryFlyoutItem">
        <ShellContent ContentTemplate="{DataTemplate pages:WarehousePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Market" Route="market" x:Name="MarketFlyoutItem">
        <ShellContent ContentTemplate="{DataTemplate pages:MarketPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Finance" Route="finance" x:Name="FinanceFlyoutItem">
        <ShellContent ContentTemplate="{DataTemplate pages:FinancePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Human Resources" Route="hr" x:Name="HRFlyoutItem">
        <ShellContent ContentTemplate="{DataTemplate pages:HumanResourcePage}" />
    </FlyoutItem>

</Shell>