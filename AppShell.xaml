<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Headquartz.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Headquartz.Pages"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
    FlyoutBehavior="Flyout"
    Title="Headquartz">

    <!-- MAIN DASHBOARD -->
    <FlyoutItem
        Title="Dashboard"
        Icon="{StaticResource IconDashboard}"
        Route="dashboard">

        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="mainpage" />

    </FlyoutItem>


    <!-- MODULE PLACEHOLDER -->
    <!-- Add more items here later
    <FlyoutItem Title="Inventory" Route="inventory">
        <ShellContent Title="Overview" ContentTemplate="{DataTemplate pages:InventoryPage}" />
    </FlyoutItem>
    -->

</Shell>
